<UserControl x:Class="SaleManagerApp.Views.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#E5E5E5">
    <Grid Margin="0, 20, 20, 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Combo Banner -->
            <RowDefinition Height="Auto"/>
            <!-- Combo Items -->
            <RowDefinition Height="*"/>
            <!-- Main content (Charts + Notifications) -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Grid.Column="1" Background="White" LastChildFill="True" Margin="0,-20,-18,12" Grid.ColumnSpan="2">
            <TextBlock Text="Dashboard" FontSize="22" FontWeight="Bold" DockPanel.Dock="Left" Width="200" Margin="30, 16, 16, 16" RenderTransformOrigin="0.872,0.545"/>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="16">
                <TextBlock Text="Tên admin/user" FontWeight="Bold" HorizontalAlignment="Right"/>
                <TextBlock Text="Mã NV/ADMIN" FontSize="12" HorizontalAlignment="Right"/>
            </StackPanel>
        </DockPanel>

        <!-- Combo Banner -->
        <Border Grid.Row="1" Background="#4D7AA4" CornerRadius="10" Padding="20" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="/Assets/Images/discount-icon.png" Width="40" Height="40" Margin="0,0,15,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding BannerText}" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Combo Items Section -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Combo Item 1 -->
            <Border Grid.Column="0" Background="White" CornerRadius="15" Margin="5" Padding="15">
                <StackPanel>
                    <Image Source="{Binding Combo1ImageUrl, FallbackValue=/Assets/Images/default-combo.png, TargetNullValue=/Assets/Images/default-combo.png}" 
                           Stretch="UniformToFill" 
                           Height="150" 
                           Width="150"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding Combo1Name, FallbackValue='Combo đang cập nhật'}" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               TextAlignment="Center" 
                               TextWrapping="Wrap"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Combo1Price, FallbackValue='0 VNĐ'}" 
                               FontSize="14" 
                               Foreground="#4D7AA4" 
                               TextAlignment="Center"
                               FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Combo Item 2 -->
            <Border Grid.Column="1" Background="White" CornerRadius="15" Margin="5" Padding="15">
                <StackPanel>
                    <Image Source="{Binding Combo2ImageUrl, FallbackValue=/Assets/Images/default-combo.png, TargetNullValue=/Assets/Images/default-combo.png}" 
                           Stretch="UniformToFill" 
                           Height="150" 
                           Width="150"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding Combo2Name, FallbackValue='Combo đang cập nhật'}" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               TextAlignment="Center" 
                               TextWrapping="Wrap"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Combo2Price, FallbackValue='0 VNĐ'}" 
                               FontSize="14" 
                               Foreground="#4D7AA4" 
                               TextAlignment="Center"
                               FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Combo Item 3 -->
            <Border Grid.Column="2" Background="White" CornerRadius="15" Margin="5" Padding="15">
                <StackPanel>
                    <Image Source="{Binding Combo3ImageUrl, FallbackValue=/Assets/Images/default-combo.png, TargetNullValue=/Assets/Images/default-combo.png}" 
                           Stretch="UniformToFill" 
                           Height="150" 
                           Width="150"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding Combo3Name, FallbackValue='Combo đang cập nhật'}" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               TextAlignment="Center" 
                               TextWrapping="Wrap"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Combo3Price, FallbackValue='0 VNĐ'}" 
                               FontSize="14" 
                               Foreground="#4D7AA4" 
                               TextAlignment="Center"
                               FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main content (Charts + Notifications) - GIỮ NGUYÊN PHẦN CŨ -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <!-- Charts -->
                <RowDefinition Height="180"/>
                <!-- Notifications -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <!-- Line Chart -->
                <ColumnDefinition Width="220"/>
                <!-- Pie Chart -->
            </Grid.ColumnDefinitions>

            <!-- Line Chart Placeholder -->
            <Border Grid.Row="0" Grid.Column="0" Background="White" BorderThickness="2" Margin="5">
                <Image Source="/Assets/Images/BarLineChart.png" Stretch="Uniform"/>
            </Border>

            <!-- Pie Chart Placeholder -->
            <Border Grid.Row="0" Grid.Column="1" Background="White" BorderThickness="2" Margin="5">
                <Image Source="/Assets/Images/PieChart (1).png" Stretch="Uniform"/>
            </Border>

            <!-- Bottom Pie Chart + Notifications -->
            <Grid Grid.Row="1" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <!-- Pie chart -->
                    <ColumnDefinition Width="*"/>
                    <!-- Notifications -->
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" BorderThickness="2" Margin="5">
                    <Image Source="/Assets/Images/PieChart.png" Stretch="Uniform"/>
                </Border>

                <StackPanel Grid.Column="1" Background="#E5E5E5" Margin="10">
                    <DockPanel>
                        <Image Source="/Assets/Images/bell.png" Width="37" Height="24" Margin="1"/>
                        <TextBlock FontWeight="SemiBold" FontSize="18" Text=" Notifications" Margin="0,-2,0,0"/>
                    </DockPanel>
                    <TextBlock FontSize="15" Text="Thông báo: Cập nhập quy định mới của công ty" Foreground="#4D7AA4" Margin="0,5,0,0"/>
                    <TextBlock Text="Chào mọi người, công ty đã có quy định mới về việc sử dụng bếp và..." TextWrapping="Wrap" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>