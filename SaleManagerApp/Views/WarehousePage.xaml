<UserControl x:Class="SaleManagerApp.Views.WarehousePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1400" d:DesignHeight="800"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Nút tag chung -->
        <Style x:Key="TagButton" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="12,0">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút tag đang chọn -->
        <Style x:Key="TagButtonSelected" TargetType="Button" BasedOn="{StaticResource TagButton}">
            <Setter Property="Background" Value="#5B7FFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Style cho nút Nhập kho -->
        <Style x:Key="AddButton" TargetType="Button">
            <Setter Property="Background" Value="#5B7FFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20"
                                Background="{TemplateBinding Background}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="16,0">
                                <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Template cho container card hover -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="10" Opacity="0.08" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#000000" BlurRadius="16" Opacity="0.15" ShadowDepth="4"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER / NAV -->
        <!-- HEADER / NAV -->
        <Grid Grid.Row="0" Background="White" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Top navigation và title -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0,0,0">
                <!-- Logo text -->
                <TextBlock Text="Warehouse" FontWeight="Bold" FontSize="22" VerticalAlignment="Center" Margin="0,0,200,0"/>

                <!-- Top nav links -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="210, 0, 0, 0">
                    <StackPanel Margin="16,0" VerticalAlignment="Center">
                        <TextBlock Text="Dụng cụ bếp" Foreground="#6B7280" FontSize="15" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Margin="10,0" VerticalAlignment="Center">
                        <TextBlock Text="Nguyên liệu" Foreground="#6B7280" FontWeight="Regular" FontSize="15" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Margin="10,0" VerticalAlignment="Center">
                        <TextBlock Text="Lịch sử xuất/nhập kho" Foreground="#6B7280" FontSize="15" HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- User info -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,30,0">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,12,0">
                    <TextBlock Text="Tên admin/user" FontWeight="SemiBold" HorizontalAlignment="Right" FontSize="14"/>
                    <TextBlock Text="Mã NV/ADMIN" FontSize="12" Foreground="#999" HorizontalAlignment="Right"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="20,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- FILTER + SEARCH ROW -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="10,10,10,20">
                <!-- Button Nhập kho - bên phải cùng -->
                <Button Content="Nhập kho" 
                        Style="{StaticResource AddButton}"
                        DockPanel.Dock="Right"
                        Margin="0,0,0,0"/>

                <!-- Tag buttons bên trái -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <Button Style="{StaticResource TagButtonSelected}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="16" Height="16" Fill="White" Margin="0,0,8,0"/>
                            <TextBlock Text="Tất cả" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource TagButton}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="16" Height="16" Fill="#DDD" Margin="0,0,8,0"/>
                            <TextBlock Text="Thịt" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource TagButton}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="16" Height="16" Fill="#DDD" Margin="0,0,8,0"/>
                            <TextBlock Text="Hải sản" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource TagButton}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="16" Height="16" Fill="#DDD" Margin="0,0,8,0"/>
                            <TextBlock Text="Rau củ" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource TagButton}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="16" Height="16" Fill="#DDD" Margin="0,0,8,0"/>
                            <TextBlock Text="Gia vị" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource TagButton}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="16" Height="16" Fill="#DDD" Margin="0,0,8,0"/>
                            <TextBlock Text="Pha chế" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Search icon button -->
                    <Button Style="{StaticResource TagButton}" Width="40" Padding="0" Margin="12,0,0,0">
                        <Canvas Width="16" Height="16">
                            <Ellipse Canvas.Left="0" Canvas.Top="0" Width="12" Height="12" Stroke="#666" StrokeThickness="2"/>
                            <Line X1="10" Y1="10" X2="15" Y2="15" Stroke="#666" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                        </Canvas>
                    </Button>
                </StackPanel>
            </DockPanel>

            <!-- ITEMS CARDS -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding ToolList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Avatar -->
                                    <Ellipse Width="64" Height="64" Fill="#E5D5D5" HorizontalAlignment="Left"/>

                                    <!-- Card content -->
                                    <StackPanel Grid.Row="1" Margin="0,16,0,0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="SemiBold"/>
                                            <TextBlock Text=" (KG)" Foreground="#999" Margin="4,4,0,0" VerticalAlignment="Top" FontSize="13"/>
                                        </StackPanel>

                                        <TextBlock Text="{Binding Code}" Foreground="#333" FontWeight="SemiBold" Margin="0,8,0,0" FontSize="14"/>

                                        <TextBlock Text="Ngày nhập: DD/MM/YYYY" Foreground="#999" Margin="0,12,0,4" FontSize="13"/>
                                        <TextBlock Text="Hạn sử dụng: DD/MM/YYYY" Foreground="#999" Margin="0,0,0,16" FontSize="13"/>

                                        <!-- Status pill -->
                                        <Border x:Name="StatusPill" CornerRadius="20" Padding="14,8" HorizontalAlignment="Left" Background="#5B7FFF">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <Ellipse x:Name="StatusIcon" Width="16" Height="16" Fill="White" Margin="0,0,8,0">
                                                    <Ellipse.OpacityMask>
                                                        <VisualBrush>
                                                            <VisualBrush.Visual>
                                                                <Canvas Width="16" Height="16">
                                                                    <Path Data="M6,11 L3,8 L4.5,6.5 L6,8 L11.5,2.5 L13,4 Z" Fill="Black" StrokeThickness="0"/>
                                                                </Canvas>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Ellipse.OpacityMask>
                                                </Ellipse>
                                                <TextBlock x:Name="StatusText" Text="{Binding StatusLabel}" Foreground="White" FontWeight="SemiBold" FontSize="13"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Triggers -->
                            <DataTemplate.Triggers>
                                <!-- Available (Còn) -->
                                <DataTrigger Binding="{Binding Status}" Value="Available">
                                    <Setter TargetName="StatusPill" Property="Background" Value="#5B7FFF"/>
                                    <Setter TargetName="StatusText" Property="Foreground" Value="White"/>
                                </DataTrigger>

                                <!-- Empty (Đã hết) -->
                                <DataTrigger Binding="{Binding Status}" Value="Empty">
                                    <Setter TargetName="StatusPill" Property="Background" Value="#E8E8E8"/>
                                    <Setter TargetName="StatusText" Property="Foreground" Value="#999"/>
                                    <Setter TargetName="StatusIcon" Property="Fill" Value="#999"/>
                                </DataTrigger>

                                <!-- Expired (Hết HSD) -->
                                <DataTrigger Binding="{Binding Status}" Value="Expired">
                                    <Setter TargetName="StatusPill" Property="Background" Value="#FF4444"/>
                                    <Setter TargetName="StatusText" Property="Foreground" Value="White"/>
                                    <Setter TargetName="StatusIcon" Property="Fill" Value="White"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>