<Window x:Class="SaleManagerApp.Views.InvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:SaleManagerApp.ViewModels"

        d:DataContext="{d:DesignInstance Type=viewmodels:InvoiceViewModel}"
        mc:Ignorable="d"
        Title="HÓA ĐƠN" Height="450" Width="400" Background="#F7F7F7" WindowStartupLocation="Manual" Left=" 200" Top="100">

    <Border Background="White" CornerRadius="15" Padding="20" 
            Margin="10" 
            >
        <StackPanel VerticalAlignment="Top">

            <!-- Header -->
            <TextBlock Text="HÓA ĐƠN" FontSize="26" FontWeight="Bold" Foreground="#333" Margin="0,0,0,25" HorizontalAlignment="Center"/>

            <!-- Invoice ID -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="Invoice ID:" Width="120" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding InvoiceId}" FontWeight="Bold" Foreground="#4A7BF7"/>
            </StackPanel>

            <!-- Order ID -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="Order ID:" Width="120" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding OrderId}" FontWeight="Bold" Foreground="#4A7BF7"/>
            </StackPanel>

            <!-- Payment Method -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="Phương thức TT:" Width="120" FontWeight="SemiBold"/>
                <ComboBox Width="180" Height="30" 
                          ItemsSource="{Binding PaymentMethods}" 
                          SelectedItem="{Binding SelectedPaymentMethod}"
                          Background="White"
                          BorderBrush="#DDD"
                          BorderThickness="1"
                          Padding="5"
                          
                          >
                    <ComboBox.Resources>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>
            </StackPanel>

            <!-- Total Amount -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="Tổng tiền:" Width="120" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding TotalAmount, StringFormat={}{0:N0} VND}" FontWeight="Bold" Foreground="#4A7BF7"/>
            </StackPanel>

            <!-- Invoice Status -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,40">
                <TextBlock Text="Trạng thái:" Width="120" FontWeight="SemiBold"/>
                <ComboBox Width="180" Height="30"
                          ItemsSource="{Binding InvoiceStatuses}" 
                          SelectedItem="{Binding SelectedInvoiceStatus}"
                          Background="White"
                          BorderBrush="#DDD"
                          BorderThickness="1"
                          Padding="5"

                          >
                    <ComboBox.Resources>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>
            </StackPanel>

            <!-- Save Button -->
            <Button Height="45" Width="180" HorizontalAlignment="Center"
        Background="#4A7BF7" BorderThickness="0" Command="{Binding SaveInvoiceCommand}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="22" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3570E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <TextBlock Text="Lưu hóa đơn" Foreground="White" FontWeight="SemiBold" FontSize="16"/>
            </Button>


        </StackPanel>
    </Border>
</Window>
