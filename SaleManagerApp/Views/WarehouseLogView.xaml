<Window x:Class="SaleManagerApp.Views.WarehouseLogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lịch sử kho"
        Width="1100"
        Height="700"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <DataGrid ItemsSource="{Binding FilteredLogs}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Thời gian"
                                    Binding="{Binding TimeDisplay}"
                                    Width="140"/>

                <DataGridTemplateColumn Header="Loại" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding ActionColor}"
                                    CornerRadius="10"
                                    Padding="6">
                                <TextBlock Foreground="White"
                                           HorizontalAlignment="Center">
                                    <Run Text="{Binding ActionIcon}"/>
                                    <Run Text=" "/>
                                    <Run Text="{Binding ActionType}"/>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Nguyên liệu"
                                    Binding="{Binding IngredientName}"
                                    Width="200"/>

                <DataGridTextColumn Header="Chi tiết"
                                    Binding="{Binding ActionDescription}"
                                    Width="200"/>

                <DataGridTextColumn Header="Ghi chú"
                                    Binding="{Binding Note}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
