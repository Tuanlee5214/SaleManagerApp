<Window x:Class="SaleManagerApp.Views.AddScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chọn ca làm ngày mai" 
        Height="350" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="White" 
            CornerRadius="20" 
            Padding="30">
        <Border.Effect>
            <DropShadowEffect Color="Gray" 
                              Direction="270" 
                              ShadowDepth="3" 
                              BlurRadius="15" 
                              Opacity="0.3"/>
        </Border.Effect>

        <StackPanel Margin="0,-8,0,0">
            <TextBlock Text="CHỌN CA LÀM VIỆC NGÀY MAI" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,-3,0,10"/>

            <Button Content="☀️ Ca Sáng (7:00 - 12:00)"
                    Height="48"
                    Margin="0,15,0,15"
                    Background="#FFF8E1"
                    BorderBrush="#FFC107"
                    BorderThickness="2"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Click="MorningShift_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="🌤️ Ca Chiều (12:00 - 17:00)"
                    Height="48"
                    Margin="0,0,0,15"
                    Background="#E3F2FD"
                    BorderBrush="#2196F3"
                    BorderThickness="2"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Click="AfternoonShift_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="🌙 Ca Tối (17:00 - 22:00)"
                    Height="48"
                    Margin="0,0,0,20"
                    Background="#F3E5F5"
                    BorderBrush="#9C27B0"
                    BorderThickness="2"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Click="EveningShift_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Hủy"
                    Height="45"
                    Background="#2D2D2D"
                    Foreground="White"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Click="Cancel_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="22"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>
    </Border>
</Window>