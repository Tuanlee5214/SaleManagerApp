<Window x:Class="SaleManagerApp.Views.InsertCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Thêm Khách Hàng"
        Width="420" Height="520"
        ResizeMode="NoResize"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Style dùng chung cho input box -->
        <Style x:Key="InputBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#EFEFEF"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <!-- Style nút bấm bo tròn -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3B5AFE"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2554F0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#333"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">

            <!-- Title -->
            <TextBlock Text="THÊM KHÁCH HÀNG"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 16" />

            <!-- FullName -->
            <StackPanel Orientation="Vertical" Margin="0 0 0 12">
                <TextBlock Text="Họ và tên:" FontWeight="SemiBold" Margin="0 0 0 6"/>
                <Border Style="{StaticResource InputBorder}">
                    <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                             BorderThickness="0" Background="Transparent" />
                </Border>
            </StackPanel>

            <!-- Phone -->
            <StackPanel Orientation="Vertical" Margin="0 0 0 12">
                <TextBlock Text="Số điện thoại:" FontWeight="SemiBold" Margin="0 0 0 6"/>
                <Border Style="{StaticResource InputBorder}">
                    <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                             BorderThickness="0" Background="Transparent" />
                </Border>
            </StackPanel>

            <!-- Email -->
            <StackPanel Orientation="Vertical" Margin="0 0 0 12">
                <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0 0 0 6"/>
                <Border Style="{StaticResource InputBorder}">
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             BorderThickness="0" Background="Transparent" />
                </Border>
            </StackPanel>

            <!-- Address -->
            <StackPanel Orientation="Vertical" Margin="0 0 0 12">
                <TextBlock Text="Địa chỉ:" FontWeight="SemiBold" Margin="0 0 0 6"/>
                <Border Style="{StaticResource InputBorder}" Padding="6">
                    <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="70"
                             BorderThickness="0" Background="Transparent" />
                </Border>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                <Button Content="Hủy"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding CancelFormCommand}"
                        Margin="0 0 20 0"/>
                <Button Content="Xác nhận"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding InsertCustomerCommand}"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>