<Window x:Class="SaleManagerApp.Views.OrderDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaleManagerApp.Views" xmlns:viewmodels="clr-namespace:SaleManagerApp.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:OrderDetailViewModelWin}"
        mc:Ignorable="d"
        Title="OrderDetailWindow" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="{Binding OrderId, StringFormat='Mã đơn: {0}'}" FontWeight="SemiBold" FontSize="16"/>
        <TextBlock Text="{Binding CreatedAt, StringFormat='Ngày tạo: {0:dd/MM/yyyy}'}" FontWeight="SemiBold" FontSize="12" Margin="0,5,0,15"/>

        <DataGrid ItemsSource="{Binding Details}" AutoGenerateColumns="False" IsReadOnly="True" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên món" Binding="{Binding menuItemName}" Width="*"/>
                <DataGridTextColumn Header="SL" Binding="{Binding quantity}" Width="50"/>
                <DataGridTextColumn Header="Giá" Binding="{Binding unitPrice, StringFormat='{}{0:N0}đ'}" Width="80"/>
                <DataGridTextColumn Header="Thành tiền" Binding="{Binding total, StringFormat='{}{0:N0}đ'}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
