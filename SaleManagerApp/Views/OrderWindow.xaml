<Window x:Class="SaleManagerApp.Views.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:SaleManagerApp.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:RecentOrdersViewModel}"
        mc:Ignorable="d"
        Background="#F5F5F5"
        Title="Danh sách đơn hàng" 
        WindowStartupLocation="CenterScreen"
        Height="650" Width="900">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="DANH SÁCH ĐƠN HÀNG"
                   FontSize="24" FontWeight="Bold" Foreground="#333"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <DockPanel Grid.Row="1" Margin="0,0,0,20" HorizontalAlignment="Right">
            <!--<TextBox Width="300" Height="40" Background="White" BorderBrush="#DDD" BorderThickness="1"
                     FontSize="14" Padding="10,0,15,0" VerticalContentAlignment="Center"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" IsHitTestVisible="False"/>
                                <ScrollViewer x:Name="PART_ContentHost" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>-->
        </DockPanel>

        <Border Grid.Row="2" Background="White" CornerRadius="20" Padding="15" BorderBrush="#DDD" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="OrdersList" HorizontalAlignment="Center" ItemsSource="{Binding Orders}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,20,20">
                                <Button Width="235" Height="100" Background="#F5F5F5" BorderThickness="0" 
                                        Command="{Binding DataContext.OpenOrderDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="15" Background="{TemplateBinding Background}">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <StackPanel VerticalAlignment="Center">
                                        <DockPanel Margin="20,0,20,5">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="🛒" FontSize="14" Foreground="#666"/>
                                                <TextBlock Text="{Binding OrderId}" FontSize="14" FontWeight="SemiBold" Foreground="#666" Margin="5,0,0,0"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding ItemCount, StringFormat={}{0:N0} món}" FontWeight="SemiBold" FontSize="13" Foreground="#666" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
                                        </DockPanel>
                                        <Button Width="190" Height="30" Padding="12,6" HorizontalAlignment="Center" Background="{Binding StatusColor}" Foreground="White" FontWeight="SemiBold" FontSize="13"
                                                Command="{Binding DataContext.ChangeStatusCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <TextBlock Text="{Binding StatusText}"/>
                                        </Button>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <Button Grid.Row="3" Content="ĐÓNG" Margin="0,20,0,0" Width="100" Height="35"
                Background="#4A7BF7" Foreground="White" BorderThickness="0"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Click="Close_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>