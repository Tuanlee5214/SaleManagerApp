<UserControl x:Class="SaleManagerApp.Views.UserPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:SaleManagerApp.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#F5F5F5">

    <UserControl.Resources>
        <helpers:NullableImageConverter x:Key="NullableImageConverter"/>
    </UserControl.Resources>

    <Grid x:Name="RootGrid" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="897*"/>
            <ColumnDefinition Width="263*"/>
        </Grid.ColumnDefinitions>

        <!-- HEADER -->
        <Grid Height="60" Grid.Row="0" Background="White" Margin="-19,-25,-19,35" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0,20,0" Grid.Column="0">
                <TextBlock Text="Staff Management" FontWeight="SemiBold" FontSize="22" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- POSITION FILTER BUTTONS -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Width="442">
                <Border Background="Transparent" Padding="16,8" Margin="0,0,0,0" CornerRadius="8" Cursor="Hand" MouseLeftButtonDown="QuanLyButton_Click">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedPosition}" Value="Quản lý">
                                    <Setter Property="Background" Value="#EEF2FF"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="Quản lý" FontSize="15">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#6B7280"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPosition}" Value="Quản lý">
                                        <Setter Property="Foreground" Value="#4A7BF7"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

                <Border Background="Transparent" Padding="16,8" Margin="4,0" CornerRadius="8" Cursor="Hand" MouseLeftButtonDown="PhuBepButton_Click">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedPosition}" Value="Phụ bếp">
                                    <Setter Property="Background" Value="#EEF2FF"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="Phụ bếp" FontSize="15">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#6B7280"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPosition}" Value="Phụ bếp">
                                        <Setter Property="Foreground" Value="#4A7BF7"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

                <Border Background="Transparent" Padding="16,8" Margin="4,0" CornerRadius="8" Cursor="Hand" MouseLeftButtonDown="PhucVuButton_Click">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedPosition}" Value="Phục vụ">
                                    <Setter Property="Background" Value="#EEF2FF"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="Phục vụ" FontSize="15">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#6B7280"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPosition}" Value="Phục vụ">
                                        <Setter Property="Foreground" Value="#4A7BF7"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

                <Border Background="Transparent" Padding="16,8" Margin="4,0" CornerRadius="8" Cursor="Hand" MouseLeftButtonDown="AllButton_Click">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedPosition}" Value="{x:Null}">
                                    <Setter Property="Background" Value="#EEF2FF"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="Tất cả" FontSize="15">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#6B7280"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPosition}" Value="{x:Null}">
                                        <Setter Property="Foreground" Value="#4A7BF7"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,30,0" Grid.Column="2">
                <TextBlock Text="Tên admin/user" FontWeight="Bold" HorizontalAlignment="Right"/>
                <TextBlock Text="Mã NV/ADMIN" FontSize="12" Foreground="#999" HorizontalAlignment="Right"/>
            </StackPanel>
        </Grid>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- BUTTON ROW -->
            <DockPanel Grid.Row="0" Margin="0,0,0,10">
                <Grid Width="220" Height="34" Margin="10" VerticalAlignment="Center">
                    <Border CornerRadius="15" BorderBrush="#D0D0D0" BorderThickness="1" 
            Background="White" VerticalAlignment="Center" Height="34">
                        <TextBox x:Name="SearchBox" 
                 Padding="28,0,6,0" 
                 VerticalAlignment="Center"
                 VerticalContentAlignment="Center" 
                 Background="Transparent"
                 BorderThickness="0" 
                 TextChanged="SearchBox_TextChanged"
                 GotFocus="SearchBox_GotFocus"
                 LostFocus="SearchBox_LostFocus"/>
                    </Border>

                    <!-- Placeholder với icon -->
                    <StackPanel x:Name="PlaceholderPanel"
                Orientation="Horizontal" 
                Margin="8,0,0,0" 
                VerticalAlignment="Center"
                IsHitTestVisible="False">
                        <TextBlock Text="🔍" FontSize="14" Foreground="Gray" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Tìm kiếm nhân viên" Foreground="Gray" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <Button Content="Chấm công vào" Width="130" Height="36" Margin="10"
                        Background="#28A745" Foreground="White" Click="CheckInButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="18" Background="{TemplateBinding Background}" Padding="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Chấm công ra" Width="130" Height="36" Margin="10"
                        Background="#DC3545" Foreground="White" Click="CheckOutButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="18" Background="{TemplateBinding Background}" Padding="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="+ Thêm nhân viên" Width="150" Height="36" Margin="10"
                        Background="#407BFF" Foreground="White" HorizontalAlignment="Right"
                        DockPanel.Dock="Right" Click="Button_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="18" Background="{TemplateBinding Background}" Padding="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </DockPanel>

            <!-- TABLE -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="10">
                <DataGrid x:Name="StaffDataGrid" 
                          AutoGenerateColumns="False" 
                          HeadersVisibility="Column" 
                          FontSize="14"
                          RowHeight="60" 
                          IsReadOnly="True" 
                          CanUserAddRows="False"
                          ItemsSource="{Binding StaffList}" 
                          SelectionMode="Single"
                          SelectionChanged="DataGrid_SelectionChanged"
                          GridLinesVisibility="None" 
                          BorderThickness="0" 
                          Margin="-10,-10,-10,-10">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F9FAFB"/>
                            <Setter Property="Foreground" Value="#111827"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="12,12"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F3F4F6"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E5E7EB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="12,0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#111827"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}" BorderThickness="0" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Tên nhân viên" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border Width="48" Height="48" CornerRadius="24" Background="#E0E0E0" Margin="0,0,12,0">
                                            <Grid>
                                                <Ellipse Fill="#E0E0E0" Width="48" Height="48"/>
                                                <Image Stretch="UniformToFill" Width="48" Height="48"
                                                       Source="{Binding ImageFullPath, TargetNullValue={x:Null}}">
                                                    <Image.Clip>
                                                        <EllipseGeometry Center="24,24" RadiusX="24" RadiusY="24"/>
                                                    </Image.Clip>
                                                </Image>
                                            </Grid>
                                        </Border>
                                        <TextBlock Text="{Binding fullName}" VerticalAlignment="Center" FontSize="14" FontWeight="Medium"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Ngày sinh" Binding="{Binding dateofBirth}" Width="*" />
                        <DataGridTextColumn Header="Ngày vào làm" Binding="{Binding DateStart}" Width="*" />
                        <DataGridTextColumn Header="Giờ làm tháng" Binding="{Binding TotalHoursOfMonth, StringFormat=N1}" Width="*" />

                        <DataGridTemplateColumn Header="Thông tin liên lạc" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding phone}" FontSize="13"/>
                                        <TextBlock Text="{Binding email}" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Khác" Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Width="32" Height="32" Background="Transparent" 
                                            BorderThickness="0" Cursor="Hand" Click="MenuButton_Click"
                                            Tag="{Binding StaffId}">
                                        <TextBlock Text="⋮" FontSize="20" Foreground="#666" FontWeight="Bold"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                </DataGrid>
            </Border>
        </Grid>

    </Grid>

</UserControl>