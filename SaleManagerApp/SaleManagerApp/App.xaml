<Application x:Class="SaleManagerApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:v="clr-namespace:SaleManagerApp.Views"
             xmlns:vm="clr-namespace:SaleManagerApp.ViewModels"
             xmlns:local="clr-namespace:SaleManagerApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <v:LoginScreen />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:HomePageViewModel}">
            <v:HomePage />
        </DataTemplate>
    </Application.Resources>
</Application>
