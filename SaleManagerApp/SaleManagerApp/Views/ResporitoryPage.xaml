<UserControl x:Class="SaleManagerApp.Views.MenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Background="#E5E5E5"
             d:DesignHeight="800" d:DesignWidth="1200">

    <!-- ======= RESOURCES ======= -->
    <UserControl.Resources>

        <!-- Category Button -->
        <Style x:Key="CategoryButton" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#EEF2FF"/>
            <Setter Property="Foreground" Value="#3B82F6"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Round Button + -->
        <Style x:Key="RoundButton" TargetType="Button">
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="50"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Food Card Buttons -->
        <Style x:Key="FoodCardButton" TargetType="Button">
            <Setter Property="Background" Value="#3373F5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small Round Button (Delete) -->
        <Style x:Key="SmallRoundButton" TargetType="Button">
            <Setter Property="Width" Value="26"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="50"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- ======= MAIN GRID ======= -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <StackPanel Grid.Row="0" Grid.RowSpan="2" Width="60"
                    Background="White"
                    Margin="-20,-18,0,-16"
                    HorizontalAlignment="Left">

            <Image Source="/Assets/Images/logo.jpg" Width="50" Height="50"/>

            <StackPanel Margin="0,2,0,0">
                <Image Width="42" Height="41" Source="/Assets/Images/house.png" Margin="0,10"/>
                <Image Width="40" Height="40" Source="/Assets/Images/shopping.png" Margin="0,10"/>
                <Image Width="30" Height="32" Source="/Assets/Images/user.png" Margin="0,10"/>
                <Image Width="24" Height="34" Source="/Assets/Images/icon.png" Margin="0,10"/>
            </StackPanel>
        </StackPanel>

        <!-- HEADER -->
        <DockPanel Grid.Row="0" Grid.Column="1" Background="White"
                   LastChildFill="True"
                   Margin="1,-18,-18,12">
            <TextBlock Text="Menu" FontSize="20" FontWeight="SemiBold"
                       DockPanel.Dock="Left" Margin="16"/>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="16">
                <TextBlock Text="Tên admin/user" FontWeight="Bold"/>
                <TextBlock Text="Mã NV/ADMIN" FontSize="12"/>
            </StackPanel>
        </DockPanel>

        <!-- DASHBOARD -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT CONTENT -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                <!-- Recent Orders Boxes -->
                <Grid Height="110">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" CornerRadius="10" BorderBrush="#EEE" BorderThickness="1" Padding="10">
                        <StackPanel>
                            <TextBlock Text="# Mã đơn"/>
                            <TextBlock Text="0 món" FontSize="22" FontWeight="Bold" Margin="0,5,0,10"/>
                            <Border Background="#3DC65C" CornerRadius="5" Padding="5">
                                <TextBlock Text="Sẵn sàng" Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" CornerRadius="10" BorderBrush="#EEE" BorderThickness="1" Padding="10" Margin="10,0">
                        <StackPanel>
                            <TextBlock Text="# Mã đơn"/>
                            <TextBlock Text="0 món" FontSize="22" FontWeight="Bold" Margin="0,5,0,10"/>
                            <Border Background="#FFA726" CornerRadius="5" Padding="5">
                                <TextBlock Text="Đang chế biến" Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" CornerRadius="10" BorderBrush="#EEE" BorderThickness="1" Padding="10">
                        <StackPanel>
                            <TextBlock Text="# Mã đơn"/>
                            <TextBlock Text="0 món" FontSize="22" FontWeight="Bold" Margin="0,5,0,10"/>
                            <Border Background="#FFA726" CornerRadius="5" Padding="5">
                                <TextBlock Text="Đang chế biến" Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Category List -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto" Margin="0,20,0,10">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Style="{StaticResource CategoryButton}" Content="Tất cả"/>
                        <Button Style="{StaticResource CategoryButton}" Content="Thịt bò"/>
                        <Button Style="{StaticResource CategoryButton}" Content="Thịt heo"/>
                        <Button Style="{StaticResource CategoryButton}" Content="Combo"/>
                        <Button Style="{StaticResource CategoryButton}" Content="Món khác"/>
                        <Button Style="{StaticResource CategoryButton}" Content="Nước uống"/>
                        <Button Style="{StaticResource RoundButton}" Content="+"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Menu Items Grid -->
                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <!-- SAMPLE FOOD CARD -->
                    <Border Width="250" Height="310" CornerRadius="10" Background="White"
                            BorderBrush="#3373F5" BorderThickness="2" Margin="10">
                        <Grid>
                            <!-- Admin delete icon -->
                            <Button Style="{StaticResource SmallRoundButton}" 
                                    Margin="5"
                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                    Content="X"/>

                            <StackPanel Margin="10">
                                <Border Background="#DDD" Height="140" CornerRadius="8"/>
                                <TextBlock Text="Tên món (Giá tiền)" FontSize="16" Margin="0,10,0,5"/>
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <Button Style="{StaticResource FoodCardButton}" Content="Đã chọn"/>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Button Content="-" Width="28" Height="28"/>
                                        <TextBlock Text="1" VerticalAlignment="Center"/>
                                        <Button Content="+" Width="28" Height="28"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ItemsControl>
            </StackPanel>

            <!-- RIGHT ORDER PANEL -->
            <StackPanel Grid.Column="1">
                <Border Background="White" CornerRadius="10" Padding="15" BorderBrush="#EEE" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Thông tin đơn hàng" FontSize="18" FontWeight="Bold"/>
                        <TextBlock Text="Mã đơn hàng hiện tại" Margin="0,5,0,10"/>

                        <StackPanel Background="#F9FAFB" Padding="10" CornerRadius="10" Margin="0,10">
                            <!-- SAMPLE ORDER ITEM -->
                            <StackPanel Orientation="Horizontal" Margin="0,10">
                                <Border Width="60" Height="60" Background="#DDD" CornerRadius="6"/>
                                <StackPanel Margin="10,0">
                                    <TextBlock Text="Thịt heo quay" FontSize="16"/>
                                    <TextBlock Text="159.000 VND" Foreground="#666"/>
                                </StackPanel>
                                <Button Style="{StaticResource SmallRoundButton}" Content="🗑" Margin="20,0,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Total Info -->
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="Thông tin thanh toán" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="Tổng giá trị: 000 VND" Margin="0,5,0,0"/>
                            <TextBlock Text="Phí: 000 VND"/>
                            <TextBlock Text="Giảm giá: XX%"/>
                            <TextBlock Text="Tổng: 000 VND" FontWeight="Bold" FontSize="20" Margin="0,10"/>
                        </StackPanel>

                        <Button Style="{StaticResource FoodCardButton}" Content="Lưu đơn hàng" FontSize="18" Padding="12" Margin="0,15,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
