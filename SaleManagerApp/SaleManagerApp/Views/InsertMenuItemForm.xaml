<Window x:Class="SaleManagerApp.Views.InsertMenuItemForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SaleManagerApp.Views" 
        xmlns:viewmodels="clr-namespace:SaleManagerApp.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:InsertMenuItemViewModel}"
        mc:Ignorable="d"
        Title="Thêm Món"
        Width="400" Height="650"
        MinWidth="400" MinHeight="650"
        MaxWidth="400" MaxHeight="650"
        ResizeMode="NoResize">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="White" CornerRadius="15" Padding="20" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="THÊM MÓN" FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0 0 0 10"/>

            <StackPanel Grid.Row="2" Orientation="Vertical">
                <TextBlock Text="Loại món:" FontWeight="SemiBold" Margin="0 0 0 5"/>

                <Border CornerRadius="10"
            Background="#EEE"
            BorderBrush="#DDD"
            BorderThickness="1"
            Padding="2">
                    <!-- Quan trọng để tạo khoảng trống đẹp -->

                    <ComboBox ItemsSource="{Binding Catagories}"
                  SelectedItem="{Binding Type, Mode=TwoWay}"
                  Height="30"
                  Background="Transparent"
                  BorderThickness="0"
                  VerticalContentAlignment="Center"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="4" Orientation="Vertical">
                <TextBlock Text="Tên món:" FontWeight="SemiBold" Margin="0 0 0 5"/>
                <Border CornerRadius="10" Background="#EEE" BorderBrush="#DDD" BorderThickness="1">
                    <TextBox Text="{Binding MenuItemName, UpdateSourceTrigger=PropertyChanged}"
                             Height="30" BorderThickness="0" Background="Transparent" Padding="5 0" VerticalContentAlignment="Center"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="6" Orientation="Vertical">
                <TextBlock Text="Giá tiền:" FontWeight="SemiBold" Margin="0 0 0 5"/>
                <Border CornerRadius="10" Background="#EEE" BorderBrush="#DDD" BorderThickness="1">
                    <TextBox Text="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged}"
                             Height="30" BorderThickness="0" Background="Transparent" Padding="5 0" VerticalContentAlignment="Center"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="8" Orientation="Vertical">
                <TextBlock Text="Kích cỡ:" FontWeight="SemiBold" Margin="0 0 0 5"/>
                <Border CornerRadius="10" Background="#EEE" BorderBrush="#DDD" BorderThickness="1">
                    <TextBox Text="{Binding Size, UpdateSourceTrigger=PropertyChanged}"
                             Height="30" BorderThickness="0" Background="Transparent" Padding="5 0" VerticalContentAlignment="Center"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="10" Orientation="Vertical">
                <TextBlock Text="Mô tả:" FontWeight="SemiBold" Margin="0 0 0 5"/>
                <Border CornerRadius="10" Background="#EEE" BorderBrush="#DDD" BorderThickness="1">
                    <TextBox Text="{Binding SpecialInfo, UpdateSourceTrigger=PropertyChanged}"
                             MinHeight="30" AcceptsReturn="True" TextWrapping="Wrap" BorderThickness="0" Background="Transparent" 
                             TextChanged="TextBox_TextChanged" Padding="5" VerticalContentAlignment="Center"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="12" Orientation="Vertical">
                <TextBlock Text="Ảnh minh họa:" FontWeight="SemiBold" Margin="0 0 0 5"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Border CornerRadius="10" Background="#EEE" BorderBrush="#DDD" BorderThickness="1">
                        <Button Width="50" Height="50" Content="⭱" Command="{Binding PickImageCommand}"
                                Background="Transparent" BorderThickness="0" FontSize="20"/>
                    </Border>
                    <Border Width="80" Height="80" BorderBrush="#DDD" BorderThickness="1" Margin="10 0" CornerRadius="5">
                        <Image Source="{Binding PreviewPath, TargetNullValue={x:Null}}"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="14" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0" >

                <Button Content="Hủy" Width="120" Height="30" 
                        Background="#000" Foreground="White"
                        BorderThickness="0"
                        Command="{Binding CancelFormCommand}"
                        Margin="0 0 30 0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                CornerRadius="12">
                                            <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!-- Hiệu ứng hover -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2563EB"/>
                                            </Trigger>

                                            <!-- Hiệu ứng nhấn -->
                                            <EventTrigger RoutedEvent="PreviewMouseLeftButtonDown">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="1" To="0.6"
                                         Duration="0:0:0.1"
                                         AutoReverse="True"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Xác nhận" Width="120" Height="30" 
                        Background="#3B5AFE" Foreground="White"
                        Command="{Binding InsertMenuItemCommand}" 
                        BorderThickness="0" Click="Button_Click_2">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                CornerRadius="12">
                                        <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- Hiệu ứng hover -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2563EB"/>
                                        </Trigger>

                                        <!-- Hiệu ứng nhấn -->
                                        <EventTrigger RoutedEvent="PreviewMouseLeftButtonDown">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="1" To="0.6"
                                         Duration="0:0:0.1"
                                         AutoReverse="True"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                </Button>

            </StackPanel>
        </Grid>
    </Border>
    </ScrollViewer>

</Window>