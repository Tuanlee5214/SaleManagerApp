<UserControl x:Class="SaleManagerApp.Views.WarehousePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1400" d:DesignHeight="800"
             Background="#F5F5F5">

    <!-- ================= RESOURCES ================= -->
    <UserControl.Resources>

        <!-- Tag button -->
        <Style x:Key="TagButton" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TagButtonSelected" TargetType="Button" BasedOn="{StaticResource TagButton}">
            <Setter Property="Background" Value="#5B7FFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Primary button -->
        <Style x:Key="AddButton" TargetType="Button">
            <Setter Property="Background" Value="#5B7FFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,6,0"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- ================= LAYOUT ================= -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <Grid Grid.Row="0" Height="80" Background="White">
            <TextBlock Text="Warehouse Management"
                       FontSize="18"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="30,0"/>
        </Grid>

        <!-- ================= CONTENT ================= -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ===== FILTER + ACTIONS ===== -->
            <DockPanel Grid.Row="0" Margin="10,10,10,20">

                <!-- RIGHT ACTIONS -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">

                    <!-- CREATE INGREDIENT -->
                    <Button Content="Thêm nguyên liệu"
                            Style="{StaticResource AddButton}"
                            Margin="0,0,12,0"
                            Command="{Binding OpenCreateIngredientCommand}"/>

                    <!-- IMPORT -->
                    <Button Content="Nhập kho"
                            Style="{StaticResource AddButton}"
                            Command="{Binding OpenImportCommand}"/>
                </StackPanel>

                <!-- LEFT TAGS -->
                <StackPanel Orientation="Horizontal">
                    <Button Content="Tất cả" Style="{StaticResource TagButtonSelected}"/>
                    <Button Content="Thịt" Style="{StaticResource TagButton}"/>
                    <Button Content="Hải sản" Style="{StaticResource TagButton}"/>
                    <Button Content="Rau củ" Style="{StaticResource TagButton}"/>
                    <Button Content="Gia vị" Style="{StaticResource TagButton}"/>
                </StackPanel>
            </DockPanel>

            <!-- ===== INGREDIENT LIST ===== -->
            <ScrollViewer Grid.Row="1">
                <ListBox ItemsSource="{Binding Ingredients}"
                         SelectedItem="{Binding SelectedIngredient}"
                         BorderThickness="0"
                         Background="Transparent">

                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardStyle}">
                                <StackPanel>

                                    <!-- NAME -->
                                    <TextBlock Text="{Binding IngredientName}"
                                               FontSize="20"
                                               FontWeight="SemiBold"/>

                                    <!-- UNIT -->
                                    <TextBlock Text="{Binding Unit, StringFormat=Đơn vị: {0}}"
                                               Foreground="#888"
                                               Margin="0,4,0,0"/>

                                    <!-- ID -->
                                    <TextBlock Text="{Binding IngredientId}"
                                               FontSize="13"
                                               Foreground="#666"
                                               Margin="0,8,0,0"/>

                                    <!-- QUANTITY -->
                                    <TextBlock Text="{Binding TotalQuantity, StringFormat=Số lượng: {0}}"
                                               FontWeight="SemiBold"
                                               Margin="0,12,0,0"/>

                                    <!-- EXPORT BUTTON -->
                                    <Button Content="Xuất kho"
                                            Margin="0,16,0,0"
                                            Height="36"
                                            Command="{Binding DataContext.OpenExportCommand,
                                                      RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>

        </Grid>
    </Grid>
</UserControl>
