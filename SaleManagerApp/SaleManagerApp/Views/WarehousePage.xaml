<UserControl x:Class="SaleManagerApp.Views.WarehousePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1400" d:DesignHeight="800"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Tag button -->
        <Style x:Key="TagButton" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AddButton" TargetType="Button">
            <Setter Property="Background" Value="#5B7FFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,6,0"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card with hover effect -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="15" Opacity="0.2" Color="#5B7FFF"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <Grid Grid.Row="0" Height="80" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Warehouse Management"
                       FontSize="18"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="30,0"/>

            <!-- BUTTON XEM LOG -->
            <Button Grid.Column="1"
                    Content="📋 Xem Lịch sử"
                    Width="140"
                    Height="40"
                    Background="#34495E"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    Margin="0,0,30,0"
                    Cursor="Hand"
                    Command="{Binding OpenWarehouseLogCommand}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!-- ================= CONTENT ================= -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ===== FILTER + ACTIONS ===== -->
            <DockPanel Grid.Row="0" Margin="10,10,10,20">

                <!-- RIGHT ACTIONS -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="Thêm nguyên liệu"
                            Style="{StaticResource AddButton}"
                            Padding="18,8"
                            MinWidth="150"
                            Margin="0,0,12,0"
                            Command="{Binding OpenCreateIngredientCommand}"/>

                    <Button Content="Nhập kho"
                            Style="{StaticResource AddButton}"
                            Padding="18,8"
                            MinWidth="120"
                            Command="{Binding OpenImportCommand}"/>
                </StackPanel>

                <!-- LEFT FILTERS -->
                <StackPanel Orientation="Horizontal">
                    <RadioButton Content="Tất cả"
                                 GroupName="Filter"
                                 IsChecked="True"
                                 Checked="FilterButton_Checked"
                                 Tag=""
                                 Margin="6,0"
                                 VerticalAlignment="Center"/>

                    <RadioButton Content="Meat"
                                 GroupName="Filter"
                                 Checked="FilterButton_Checked"
                                 Tag="Meat"
                                 Margin="6,0"
                                 VerticalAlignment="Center"/>

                    <RadioButton Content="Seafood"
                                 GroupName="Filter"
                                 Checked="FilterButton_Checked"
                                 Tag="Seafood"
                                 Margin="6,0"
                                 VerticalAlignment="Center"/>

                    <RadioButton Content="Vegetable"
                                 GroupName="Filter"
                                 Checked="FilterButton_Checked"
                                 Tag="Vegetable"
                                 Margin="6,0"
                                 VerticalAlignment="Center"/>

                    <RadioButton Content="Spice"
                                 GroupName="Filter"
                                 Checked="FilterButton_Checked"
                                 Tag="Spice"
                                 Margin="6,0"
                                 VerticalAlignment="Center"/>

                    <RadioButton Content="Others"
                                 GroupName="Filter"
                                 Checked="FilterButton_Checked"
                                 Tag="Others"
                                 Margin="6,0"
                                 VerticalAlignment="Center"/>
                </StackPanel>
            </DockPanel>

            <!-- ===== INGREDIENT LIST ===== -->
            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding Ingredients}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- CLICK VÀO CARD = MỞ BATCH DETAIL -->
                            <Border Style="{StaticResource CardStyle}"
                                    MouseLeftButtonUp="IngredientCard_Click"
                                    Tag="{Binding IngredientId, Mode=OneWay}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- ✅ IMAGE - XÓA CONVERTER, dùng code-behind -->
                                    <Border x:Name="ImageBorder"
                                            Grid.Row="0"
                                            Width="260"
                                            Height="160"
                                            CornerRadius="12"
                                            Background="#F0F0F0"
                                            Margin="0,0,0,12"
                                            Visibility="Collapsed">
                                        <Image Source="{Binding ImageUrl}"
                                               Stretch="UniformToFill"/>
                                    </Border>

                                    <!-- INFO -->
                                    <StackPanel Grid.Row="1">
                                        <!-- NAME -->
                                        <TextBlock Text="{Binding IngredientName}"
                                                   FontSize="20"
                                                   FontWeight="SemiBold"/>

                                        <!-- FILTER -->
                                        <Border Background="#ECF0F1"
                                                CornerRadius="8"
                                                Padding="8,4"
                                                HorizontalAlignment="Left"
                                                Margin="0,8,0,0">
                                            <TextBlock Text="{Binding Filter}"
                                                       FontSize="11"
                                                       Foreground="#7F8C8D"/>
                                        </Border>

                                        <!-- UNIT -->
                                        <TextBlock Text="{Binding Unit, StringFormat=Đơn vị: {0}}"
                                                   Foreground="#888"
                                                   Margin="0,8,0,0"/>

                                        <!-- QUANTITY -->
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <TextBlock Text="Tồn kho: " Foreground="#666"/>
                                            <TextBlock Text="{Binding TotalQuantity, Mode=OneWay}"
                                                          FontWeight="Bold"
                                                          Foreground="#27AE60"/>
                                            <TextBlock Text="{Binding Unit}" Margin="4,0,0,0"/>
                                        </StackPanel>

                                        <!-- ✅ WARNINGS - XÓA CONVERTER -->
                                        <Border x:Name="ExpiredWarning"
                                                Background="#FFF3CD"
                                                CornerRadius="8"
                                                Padding="8,6"
                                                Margin="0,12,0,0"
                                                Visibility="Collapsed">
                                            <TextBlock Text="⚠️ Có batch hết hạn"
                                                       FontSize="12"
                                                       Foreground="#856404"
                                                       FontWeight="SemiBold"/>
                                        </Border>

                                        <Border x:Name="NearExpiryWarning"
                                                Background="#E3F2FD"
                                                CornerRadius="8"
                                                Padding="8,6"
                                                Margin="0,8,0,0"
                                                Visibility="Collapsed">
                                            <TextBlock Text="🕐 Sắp hết hạn"
                                                       FontSize="12"
                                                       Foreground="#1565C0"
                                                       FontWeight="SemiBold"/>
                                        </Border>

                                        <!-- BATCH COUNT -->
                                        <TextBlock Margin="0,12,0,0"
                                                   Foreground="#999"
                                                   FontSize="12">
                                            <Run Text="Số batch: "/>
                                            <Run Text="{Binding ActiveBatchCount, Mode=OneWay}"
                                                        FontWeight="SemiBold"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- ✅ TRIGGER: Show/Hide dựa vào data -->
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding ImageUrl}" Value="{x:Null}">
                                    <Setter TargetName="ImageBorder" Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding HasExpiredBatch}" Value="True">
                                    <Setter TargetName="ExpiredWarning" Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding HasNearExpiryBatch}" Value="True">
                                    <Setter TargetName="NearExpiryWarning" Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>