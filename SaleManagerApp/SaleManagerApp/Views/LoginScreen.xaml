<UserControl x:Class="SaleManagerApp.Views.LoginScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:SaleManagerApp.ViewModels" 
             xmlns:conv="clr-namespace:SaleManagerApp.Helpers"
             d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#F5F7FA">
    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>



    <Grid>

        <Grid.Background>
            <SolidColorBrush Color="AliceBlue"/>
        </Grid.Background>

        <!-- Form đăng nhập -->
        <Border Background="White"
                CornerRadius="20"
                Width="420"
                Height="530"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="20,20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5"/>
            </Border.Effect>

            <StackPanel>

                <!-- Logo -->
                <Image Source="/Assets/Images/logo.jpg"
                       Width="60"
                       Height="60"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

                <!-- Tiêu đề -->
                <TextBlock Text="ĐĂNG NHẬP"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1F2937"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <!-- Username -->
                <TextBlock Text="Tài khoản:"
                           FontSize="15"
                           Foreground="#4B5563"
                           Margin="0,0,0,8"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Height="48"
                         Width="380"
                         Padding="16,0"
                         FontSize="15"
                         Background="#E5E7EB"
                         BorderThickness="0"
                         VerticalContentAlignment="Center"
                         Margin="0,0,0,20"
                         HorizontalAlignment="Center">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="24"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Mật khẩu -->
                <TextBlock Text="Mật khẩu:"
                           FontSize="15"
                           Foreground="#4B5563"
                           Margin="0,0,0,8"/>

                <!-- Grid chứa PasswordBox + TextBox -->
                <Grid>

                    <!-- Password ẩn -->
                    <PasswordBox x:Name="pwdHidden"
                                 Width="380"
                                 Height="48"
                                 Padding="16,0"
                                 Background="#E5E7EB"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,40">
                        <PasswordBox.Template>
                            <ControlTemplate TargetType="PasswordBox">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="24">
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </PasswordBox.Template>
                    </PasswordBox>

                    <!-- Password hiện -->
                    <TextBox x:Name="pwdVisible"
                             Width="380"
                             Height="48"
                             Padding="16,0"
                             Background="#E5E7EB"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Center"
                             Visibility="Collapsed"
                             Margin="0,0,0,40">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="24"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                </Grid>

                <!-- Checkbox hiện mật khẩu -->
                <CheckBox x:Name="chkShowPassword"
                          Content="Hiện mật khẩu"
                          Margin="0,-30,0,45"
                          HorizontalAlignment="Right"
                          FontSize="13"
                          Checked="chkShowPassword_Checked"
                          Unchecked="chkShowPassword_Unchecked"/>

                <!-- Nút đăng nhập -->
                <Button Content="Đăng nhập"
        Height="50"
        Width="200"
        FontSize="16"
        FontWeight="SemiBold"
        Background="#3B82F6"
        Foreground="White"
        Cursor="Hand"
        Margin="0,0,0,0"
        HorizontalAlignment="Center"
        Command="{Binding LoginCommand}"
        CommandParameter="{Binding ElementName=pwdHidden}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="25">
                                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!-- Hiệu ứng hover -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2563EB"/>
                                            </Trigger>

                                            <!-- Hiệu ứng nhấn -->
                                            <EventTrigger RoutedEvent="PreviewMouseLeftButtonDown">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="1" To="0.6"
                                                         Duration="0:0:0.1"
                                                         AutoReverse="True"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>


                <TextBlock Text="{Binding ErrorMessage}" HorizontalAlignment="Center" FontSize="18" Foreground ="Red"/>
                <TextBlock Text="{Binding SuccessMessage}" HorizontalAlignment="Center" FontSize="18" Foreground ="Green"/>

                <Grid x:Name="OverlayGrid"
                        Background="#80000066"
                        Visibility="{Binding OverlayVisible, Converter={StaticResource BoolToVisibilityConverter}}" Height="30">

                    <TextBlock Text="Đang đăng nhập..."
                                   HorizontalAlignment="Center"
                                   Foreground="White" Margin ="0,0,0,5"/>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="45">
                        <ProgressBar Width="400" Height="10" IsIndeterminate="True"/>
                        
                    </StackPanel>
                </Grid>


            </StackPanel>
        </Border>

    </Grid>
</UserControl>
