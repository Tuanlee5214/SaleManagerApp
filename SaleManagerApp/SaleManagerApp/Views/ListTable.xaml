<Window x:Class="SaleManagerApp.Views.ListTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:conv="clr-namespace:SaleManagerApp.Helpers"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaleManagerApp.Views" xmlns:viewmodels="clr-namespace:SaleManagerApp.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:TableViewModel}"
        mc:Ignorable="d"
        Title="Danh sách bàn" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <conv:TableStatusToColorConverter x:Key="TableStatusToColorConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== LEGEND ===== -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">

            <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                <Border Width="18" Height="18"
                        Background="LightGreen"
                        CornerRadius="4"
                        Margin="0,0,6,0"/>
                <TextBlock Text="Còn trống"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Border Width="18" Height="18"
                        Background="OrangeRed"
                        CornerRadius="4"
                        Margin="0,0,6,0"/>
                <TextBlock Text="Đã có khách"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>
            </StackPanel>
        </StackPanel>

        <!-- ===== TABLE LIST ===== -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">

            <ItemsControl ItemsSource="{Binding Tables}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Background="Transparent"
            BorderThickness="0"
            Padding="0"
            Command="{Binding DataContext.SelectTableCommand,
                              RelativeSource={RelativeSource AncestorType=ItemsControl}}"
            CommandParameter="{Binding}">

                            <Border Margin="10"
                Height="130"
                Width="130"
                CornerRadius="22"
                Background="{Binding tableStatus,
                             Converter={StaticResource TableStatusToColorConverter}}">

                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10"
                                  ShadowDepth="2"
                                  Opacity="0.25"/>
                                </Border.Effect>

                                <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="10">

                                    <!-- TABLE NAME -->
                                    <TextBlock Text="{Binding tableName}"
                           FontWeight="Bold"
                           FontSize="15"
                           HorizontalAlignment="Center"/>

                                    <!-- SEAT -->
                                    <TextBlock Text="{Binding seatCount,
                                  StringFormat='Số ghế: {0}'}"
                           FontSize="12"
                           Foreground="#333"
                           HorizontalAlignment="Center"/>

                                    <!-- STATUS -->
                                    <Border Background="#66000000"
                        CornerRadius="12"
                        Padding="8,2"
                        Margin="0,6,0,0">
                                        <TextBlock Text="{Binding tableStatus}"
                               Foreground="White"
                               FontSize="11"
                               HorizontalAlignment="Center"/>
                                    </Border>

                                </StackPanel>
                            </Border>

                        </Button>
                    </DataTemplate>

                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </ScrollViewer>

    </Grid>
</Window>
