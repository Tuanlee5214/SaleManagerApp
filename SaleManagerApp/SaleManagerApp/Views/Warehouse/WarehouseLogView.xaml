<Window x:Class="SaleManagerApp.Views.WarehouseLogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lịch sử Kho" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Grid.Row="0" Text="Lịch sử Xuất Nhập Kho" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

        <!-- FILTER -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Tìm kiếm:" Width="100" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Width="300" Padding="8"/>
                    <TextBlock Text="(Tên nguyên liệu hoặc Batch ID)" VerticalAlignment="Center" Foreground="#999" FontStyle="Italic" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBlock Text="Từ ngày:" Width="100" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <DatePicker SelectedDate="{Binding FromDate}" Width="150" Padding="8" Margin="0,0,20,0"/>
                    <TextBlock Text="Đến ngày:" Width="80" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <DatePicker SelectedDate="{Binding ToDate}" Width="150" Padding="8" Margin="0,0,20,0"/>
                    <Button Content="Làm mới" Command="{Binding ResetFilterCommand}" Background="#2196F3" Foreground="White" Padding="15,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- LOG TABLE -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding FilteredLogs}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Background="White"
                  AlternatingRowBackground="#F9F9F9">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ngày" Binding="{Binding ActionDate, StringFormat='dd/MM/yyyy HH:mm'}" Width="140"/>
                <DataGridTemplateColumn Header="Loại" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Type}" Value="Import">
                                                <Setter Property="Background" Value="#E8F5E9"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="Export">
                                                <Setter Property="Background" Value="#FFF3E0"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="Delete">
                                                <Setter Property="Background" Value="#FFEBEE"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding TypeDisplay}" FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#2196F3"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Type}" Value="Import">
                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Export">
                                                    <Setter Property="Foreground" Value="#FF9800"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Delete">
                                                    <Setter Property="Foreground" Value="#F44336"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Nguyên liệu" Binding="{Binding IngredientName}" Width="200"/>
                <DataGridTextColumn Header="Batch ID" Binding="{Binding BatchId}" Width="150"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding QuantityDisplay}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Export">
                                    <Setter Property="Foreground" Value="#F44336"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Import">
                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Người thực hiện" Binding="{Binding ActionBy}" Width="120"/>
                <DataGridTextColumn Header="Ghi chú" Binding="{Binding Note}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- FOOTER -->
        <Button Grid.Row="3" Content="Đóng" Command="{Binding CloseCommand}" Background="#757575" Foreground="White" Padding="20,10" HorizontalAlignment="Right" Margin="0,15,0,0"/>
    </Grid>
</Window>