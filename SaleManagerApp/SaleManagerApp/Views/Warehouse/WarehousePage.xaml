<UserControl x:Class="SaleManagerApp.Views.WarehousePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1400" d:DesignHeight="800"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Tag button -->
        <Style x:Key="TagButton" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TagButtonSelected" TargetType="Button" BasedOn="{StaticResource TagButton}">
            <Setter Property="Background" Value="#5B7FFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Primary button -->
        <Style x:Key="AddButton" TargetType="Button">
            <Setter Property="Background" Value="#5B7FFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,6,0"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <Grid Grid.Row="0" Height="80" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Warehouse Management"
                       FontSize="18"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="30,0"/>

            <!-- ✅ THÊM: NÚT XEM LOG -->
            <Button Grid.Column="1"
                    Content="📊 Xem Log"
                    Style="{StaticResource AddButton}"
                    Background="#9C27B0"
                    Margin="0,0,30,0"
                    Command="{Binding OpenWarehouseLogCommand}"/>
        </Grid>

        <!-- ================= CONTENT ================= -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ===== FILTER + ACTIONS ===== -->
            <DockPanel Grid.Row="0" Margin="10,10,10,20">

                <!-- RIGHT ACTIONS -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <!-- CREATE INGREDIENT -->
                    <Button Content="Thêm nguyên liệu"
                            Style="{StaticResource AddButton}"
                            Margin="0,0,12,0"
                            Command="{Binding OpenCreateIngredientCommand}"/>

                    <!-- IMPORT -->
                    <Button Content="Nhập kho"
                            Style="{StaticResource AddButton}"
                            Command="{Binding OpenImportCommand}"/>
                </StackPanel>

                <!-- LEFT TAGS -->
                <StackPanel Orientation="Horizontal">
                    <Button Content="Tất cả" Style="{StaticResource TagButtonSelected}"/>
                    <Button Content="Thịt" Style="{StaticResource TagButton}"/>
                    <Button Content="Hải sản" Style="{StaticResource TagButton}"/>
                    <Button Content="Rau củ" Style="{StaticResource TagButton}"/>
                    <Button Content="Gia vị" Style="{StaticResource TagButton}"/>
                </StackPanel>
            </DockPanel>

            <!-- ===== MAIN CONTENT: INGREDIENTS + BATCHES ===== -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="300"/>
                </Grid.RowDefinitions>

                <!-- ===== INGREDIENT LIST (CARDS) ===== -->
                <ScrollViewer Grid.Row="0">
                    <ListBox ItemsSource="{Binding Ingredients}"
                             SelectedItem="{Binding SelectedIngredient}"
                             BorderThickness="0"
                             Background="Transparent">

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CardStyle}">
                                    <StackPanel>
                                        <!-- NAME -->
                                        <TextBlock Text="{Binding IngredientName}"
                                                   FontSize="20"
                                                   FontWeight="SemiBold"/>

                                        <!-- UNIT -->
                                        <TextBlock Text="{Binding Unit, StringFormat=Đơn vị: {0}}"
                                                   Foreground="#888"
                                                   Margin="0,4,0,0"/>

                                        <!-- ID -->
                                        <TextBlock Text="{Binding IngredientId}"
                                                   FontSize="13"
                                                   Foreground="#666"
                                                   Margin="0,8,0,0"/>

                                        <!-- QUANTITY -->
                                        <TextBlock Text="{Binding TotalQuantity, StringFormat=Số lượng: {0}}"
                                                   FontWeight="SemiBold"
                                                   Margin="0,12,0,0"/>

                                        <!-- EXPORT BUTTON -->
                                        <Button Content="Xuất kho"
                                                Margin="0,16,0,0"
                                                Height="36"
                                                Background="#FF9800"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Command="{Binding DataContext.OpenExportCommand,
                                                          RelativeSource={RelativeSource AncestorType=ListBox}}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>

                <GridSplitter Grid.Row="1" 
                             Height="10"
                             HorizontalAlignment="Stretch"
                             Background="Transparent"/>

                <!-- ✅ THÊM: BATCH LIST -->
                <Border Grid.Row="2"
                        Background="White"
                        CornerRadius="16"
                        Padding="20"
                        Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0"
                                   Text="📦 Danh sách Batch (Double-click để xem chi tiết)"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding SelectedIngredient.Batches}"
                                  SelectedItem="{Binding SelectedBatch}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  RowHeight="45"
                                  MouseDoubleClick="DataGrid_MouseDoubleClick">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Batch ID" 
                                                   Binding="{Binding BatchId}" 
                                                   Width="200"/>

                                <DataGridTextColumn Header="Tổng SL" 
                                                   Binding="{Binding TotalQuantity}" 
                                                   Width="100"/>

                                <DataGridTextColumn Header="Ngày nhập" 
                                                   Binding="{Binding ImportDate, StringFormat='dd/MM/yyyy'}" 
                                                   Width="120"/>

                                <DataGridTextColumn Header="HSD gần nhất" 
                                                   Binding="{Binding NearestExpiryDate, StringFormat='dd/MM/yyyy', TargetNullValue='Không có'}" 
                                                   Width="120"/>

                                <DataGridTemplateColumn Header="Trạng thái" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="12" 
                                                   Padding="10,5" 
                                                   HorizontalAlignment="Left">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsExpired}" Value="True">
                                                                <Setter Property="Background" Value="#FFEBEE"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsNearExpiry}" Value="True">
                                                                <Setter Property="Background" Value="#FFF3E0"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>

                                                <TextBlock FontWeight="SemiBold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="✓ Bình thường"/>
                                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsExpired}" Value="True">
                                                                    <Setter Property="Text" Value="✗ Hết hạn"/>
                                                                    <Setter Property="Foreground" Value="#F44336"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsNearExpiry}" Value="True">
                                                                    <Setter Property="Text" Value="⚠ Sắp hết hạn"/>
                                                                    <Setter Property="Foreground" Value="#FF9800"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>