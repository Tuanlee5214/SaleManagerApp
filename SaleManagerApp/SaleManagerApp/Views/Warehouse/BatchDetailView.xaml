<Window x:Class="SaleManagerApp.Views.BatchDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết Batch" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="{Binding IngredientName}" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Batch ID: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding BatchId}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Tổng số lượng: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding TotalQuantity}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Ngày nhập: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding ImportDate, StringFormat='dd/MM/yyyy'}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="HSD gần nhất: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding NearestExpiryDate, StringFormat='dd/MM/yyyy', TargetNullValue='Không có'}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- DANH SÁCH CÁC LẦN CẬP NHẬT -->
        <TextBlock Grid.Row="1" Text="Lịch sử cập nhật:" FontSize="16" FontWeight="Bold" Margin="5,0,0,10"/>

        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Updates}"
                  SelectedItem="{Binding SelectedUpdate}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Lần" Binding="{Binding UpdateNumber}" Width="60"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Ngày nhập" Binding="{Binding ImportDate, StringFormat='dd/MM/yyyy'}" Width="120"/>
                <DataGridTextColumn Header="HSD" Binding="{Binding ExpiryDate, StringFormat='dd/MM/yyyy', TargetNullValue='Không có'}" Width="120"/>
                <DataGridTemplateColumn Header="Trạng thái" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#E8F5E9"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsExpired}" Value="True">
                                                <Setter Property="Background" Value="#FFEBEE"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsNearExpiry}" Value="True">
                                                <Setter Property="Background" Value="#FFF3E0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Còn hạn"/>
                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsExpired}" Value="True">
                                                    <Setter Property="Text" Value="Hết hạn"/>
                                                    <Setter Property="Foreground" Value="#F44336"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsNearExpiry}" Value="True">
                                                    <Setter Property="Text" Value="Sắp hết hạn"/>
                                                    <Setter Property="Foreground" Value="#FF9800"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- EXPORT SECTION -->
        <Border Grid.Row="3" Background="White" CornerRadius="8" Padding="15" Margin="0,15,0,0">
            <StackPanel>
                <TextBlock Text="Xuất kho từ batch này:" FontWeight="Bold" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Số lượng xuất:" VerticalAlignment="Center" Width="120"/>
                    <TextBox Text="{Binding ExportQuantity, UpdateSourceTrigger=PropertyChanged}" Width="150" Padding="5"/>
                    <Button Content="Xuất kho" Command="{Binding ExportCommand}" Background="#2196F3" Foreground="White" Width="100" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- BUTTONS -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cập nhật Batch (Thêm lần mới)" Command="{Binding UpdateBatchCommand}" Background="#4CAF50" Foreground="White" Padding="15,8" Margin="5"/>
            <Button Content="Xóa update hết hạn" Command="{Binding DeleteExpiredCommand}" Background="#F44336" Foreground="White" Padding="15,8" Margin="5"/>
            <Button Content="Đóng" Command="{Binding CloseCommand}" Background="#757575" Foreground="White" Padding="15,8" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>