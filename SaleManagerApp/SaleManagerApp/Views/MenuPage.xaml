<UserControl x:Class="SaleManagerApp.Views.OrderPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
            <ColumnDefinition Width="380"/>
            <!-- Right Panel - Cart -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="White" Padding="10">
            <StackPanel>
                <!-- Logo -->
                <Border Width="50" Height="50" Background="#4A7BF7" Margin="0,10">
                    <TextBlock Text="📦" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Navigation Icons -->
                <Button Width="40" Height="40" Margin="0,20,0,0" Background="Transparent" BorderThickness="0">
                    <Image Width="42" Height="41" Source="/Assets/Images/house.png"/>
                </Button>
                <Button Width="40" Height="40" Margin="0,10,0,0" Background="#E3EDFF" BorderThickness="0">
                    <Image Width="40" Height="40" Source="/Assets/Images/shopping.png"/>
                </Button>
                <Button Width="40" Height="40" Margin="0,10,0,0" Background="Transparent" BorderThickness="0">
                    <Image Width="30" Height="32" Source="/Assets/Images/user.png"/>
                </Button>
                <Button Width="40" Height="40" Margin="0,10,0,0" Background="Transparent" BorderThickness="0">
                    <Image Width="24" Height="34" Source="/Assets/Images/Icon.png"/>
                </Button>

                <!-- Settings at bottom -->
                <Button Width="40" Height="40" Margin="0,300,0,0" Background="Transparent" BorderThickness="0"/>
                <Button Width="40" Height="40" Margin="0,10,0,0" Background="Transparent" BorderThickness="0"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="30,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Navigation Tabs -->
                <RowDefinition Height="Auto"/>
                <!-- Order Status Cards -->
                <RowDefinition Height="Auto"/>
                <!-- Search & Filter -->
                <RowDefinition Height="*"/>
                <!-- Menu Items -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Dashboard" FontSize="24" FontWeight="Bold" DockPanel.Dock="Left"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Menu" FontSize="16" Foreground="#4A7BF7" Margin="0,0,30,0" VerticalAlignment="Center" Cursor="Hand"/>
                    <TextBlock Text="Đơn hàng" FontSize="16" Foreground="#999" Margin="0,0,30,0" VerticalAlignment="Center" Cursor="Hand"/>
                    <TextBlock Text="Lịch sử thanh toán" FontSize="16" Foreground="#999" VerticalAlignment="Center" Cursor="Hand"/>
                </StackPanel>
            </DockPanel>

            <!-- Order Status Cards -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,30">
                <TextBlock Text="Đơn hàng gần đây" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,20,0"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,40,0,20">
                <!-- Card 1 - Available -->
                <Border Background="White" Padding="20" Margin="0,0,15,0" Width="220">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="🛒 # Mã đơn" FontSize="14" Foreground="#666"/>
                            <TextBlock Text="0 món" FontSize="12" Foreground="#999" HorizontalAlignment="Right"/>
                        </DockPanel>
                        <Border Background="#4CAF50" Padding="12,6" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Sẵn sàng" FontSize="13" Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock Text=" ✓" FontSize="14" Foreground="White" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Card 2 - Pending -->
                <Border Background="White" Padding="20" Margin="0,0,15,0" Width="220">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="🚗 # Mã đơn" FontSize="14" Foreground="#666"/>
                            <TextBlock Text="0 món" FontSize="12" Foreground="#999" HorizontalAlignment="Right"/>
                        </DockPanel>
                        <Border Background="#FF9800" Padding="12,6" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Đang chế biến" FontSize="13" Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock Text=" ⟳" FontSize="14" Foreground="White" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Card 3 - Pending -->
                <Border Background="White" Padding="20" Width="220">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="🛒 # Mã đơn" FontSize="14" Foreground="#666"/>
                            <TextBlock Text="0 món" FontSize="12" Foreground="#999" HorizontalAlignment="Right"/>
                        </DockPanel>
                        <Border Background="#FF9800" Padding="12,6" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Đang chế biến" FontSize="13" Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock Text=" ⟳" FontSize="14" Foreground="White" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Menu Section with Search -->
            <StackPanel Grid.Row="3" Margin="0,20,0,20">
                <DockPanel Margin="0,0,0,15">
                    <TextBlock Text="Menu (Tổng số món)" FontSize="18" FontWeight="SemiBold" DockPanel.Dock="Left"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBox Width="300" Height="40" Background="White" BorderBrush="#DDD" BorderThickness="1" 
                                 Padding="15,10" FontSize="14" Text="chỉ admin mới có quyền sửa"/>
                        <Button Width="40" Height="40" Background="White" BorderBrush="#DDD" BorderThickness="1" Margin="10,0">
                            <TextBlock Text="🔍" FontSize="18"/>
                        </Button>
                        <Button Width="40" Height="40" Background="#4A7BF7" BorderThickness="0">
                            <TextBlock Text="+" FontSize="24" Foreground="White" FontWeight="Bold"/>
                        </Button>
                    </StackPanel>
                </DockPanel>

                <!-- Category Tabs -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Button Background="#4A7BF7" BorderThickness="0" Padding="20,10" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📦" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Tất cả" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    <Button Background="White" BorderThickness="1" BorderBrush="#DDD" Padding="20,10" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🥩" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Thịt bò" FontSize="14" Foreground="#666"/>
                        </StackPanel>
                    </Button>
                    <Button Background="White" BorderThickness="1" BorderBrush="#DDD" Padding="20,10" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🍖" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Thịt heo" FontSize="14" Foreground="#666"/>
                        </StackPanel>
                    </Button>
                    <Button Background="White" BorderThickness="1" BorderBrush="#DDD" Padding="20,10" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🍱" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Combo" FontSize="14" Foreground="#666"/>
                        </StackPanel>
                    </Button>
                    <Button Background="White" BorderThickness="1" BorderBrush="#DDD" Padding="20,10" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🍽️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Món khác" FontSize="14" Foreground="#666"/>
                        </StackPanel>
                    </Button>
                    <Button Background="White" BorderThickness="1" BorderBrush="#DDD" Padding="20,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🥤" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Nước uống" FontSize="14" Foreground="#666"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>

            <!-- Menu Items Grid -->
            <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto">
                <WrapPanel Orientation="Horizontal">
                    <!-- Menu Item 1 - Selected -->
                    <Border Background="White" Width="220" Margin="0,0,15,15" BorderBrush="#4A7BF7" BorderThickness="2">
                        <Grid>
                            <StackPanel>
                                <!-- Delete Button -->
                                <Button Width="28" Height="28" Background="#FF5252" BorderThickness="0" 
                                        HorizontalAlignment="Right" Margin="0,-10,-10,0">
                                    <TextBlock Text="✕" FontSize="16" Foreground="White" FontWeight="Bold"/>
                                </Button>

                                <!-- Image Placeholder -->
                                <Border Height="150" Background="#E0E0E0" Margin="15,10,15,10"/>

                                <!-- Item Info -->
                                <StackPanel Margin="15,0,15,15">
                                    <TextBlock Text="Tên món (Giá tiền)" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                    <!-- Quantity Control -->
                                    <DockPanel>
                                        <Button Background="#4A7BF7" BorderThickness="0" 
                                                Padding="25,8" DockPanel.Dock="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Đã chọn" FontSize="13" Foreground="White" Margin="0,0,5,0"/>
                                                <TextBlock Text="✓" FontSize="13" Foreground="White"/>
                                            </StackPanel>
                                        </Button>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Width="30" Height="30" Background="#F5F5F5" BorderThickness="0" Content="−" 
                                                    FontSize="18" FontWeight="Bold" Margin="5,0"/>
                                            <TextBlock Text="1" FontSize="16" VerticalAlignment="Center" Margin="10,0"/>
                                            <Button Width="30" Height="30" Background="#F5F5F5" BorderThickness="0" Content="+" 
                                                    FontSize="18" FontWeight="Bold" Margin="5,0"/>
                                        </StackPanel>
                                    </DockPanel>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Menu Item 2 - Add Item -->
                    <Border Background="White" Width="220" Margin="0,0,15,15">
                        <StackPanel>
                            <Border Height="150" Background="#E0E0E0" Margin="15,15,15,10"/>
                            <StackPanel Margin="15,0,15,15">
                                <TextBlock Text="Tên món (Giá tiền)" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <Button Background="White" BorderBrush="#4A7BF7" BorderThickness="2" 
                                        Padding="0,8" HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Thêm món ăn" FontSize="13" Foreground="#4A7BF7" Margin="0,0,5,0"/>
                                        <TextBlock Text="+" FontSize="16" Foreground="#4A7BF7" FontWeight="Bold"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Menu Item 3 - Selected -->
                    <Border Background="White" Width="220" Margin="0,0,15,15" BorderBrush="#4A7BF7" BorderThickness="2">
                        <StackPanel>
                            <Border Height="150" Background="#E0E0E0" Margin="15,15,15,10"/>
                            <StackPanel Margin="15,0,15,15">
                                <TextBlock Text="Tên món (Giá tiền)" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <DockPanel>
                                    <Button Background="#4A7BF7" BorderThickness="0" 
                                            Padding="25,8" DockPanel.Dock="Left">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Đã chọn" FontSize="13" Foreground="White" Margin="0,0,5,0"/>
                                            <TextBlock Text="✓" FontSize="13" Foreground="White"/>
                                        </StackPanel>
                                    </Button>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Width="30" Height="30" Background="#F5F5F5" BorderThickness="0" Content="−" 
                                                FontSize="18" FontWeight="Bold" Margin="5,0"/>
                                        <TextBlock Text="1" FontSize="16" VerticalAlignment="Center" Margin="10,0"/>
                                        <Button Width="30" Height="30" Background="#F5F5F5" BorderThickness="0" Content="+" 
                                                FontSize="18" FontWeight="Bold" Margin="5,0"/>
                                    </StackPanel>
                                </DockPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Menu Item 4 -->
                    <Border Background="White" Width="220" Margin="0,0,15,15">
                        <StackPanel>
                            <Border Height="150" Background="#E0E0E0" Margin="15,15,15,10"/>
                            <StackPanel Margin="15,0,15,15">
                                <TextBlock Text="Tên món (Giá tiền)" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <DockPanel>
                                    <Button Background="#4A7BF7" BorderThickness="0" 
                                            Padding="25,8" DockPanel.Dock="Left">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Đã chọn" FontSize="13" Foreground="White" Margin="0,0,5,0"/>
                                            <TextBlock Text="✓" FontSize="13" Foreground="White"/>
                                        </StackPanel>
                                    </Button>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Width="30" Height="30" Background="#F5F5F5" BorderThickness="0" Content="−" 
                                                FontSize="18" FontWeight="Bold" Margin="5,0"/>
                                        <TextBlock Text="5" FontSize="16" VerticalAlignment="Center" Margin="10,0"/>
                                        <Button Width="30" Height="30" Background="#F5F5F5" BorderThickness="0" Content="+" 
                                                FontSize="18" FontWeight="Bold" Margin="5,0"/>
                                    </StackPanel>
                                </DockPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Menu Item 5 - Add -->
                    <Border Background="White" Width="220" Margin="0,0,15,15">
                        <StackPanel>
                            <Border Height="150" Background="#E0E0E0" Margin="15,15,15,10"/>
                            <StackPanel Margin="15,0,15,15">
                                <TextBlock Text="Tên món (Giá tiền)" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <Button Background="White" BorderBrush="#4A7BF7" BorderThickness="2" 
                                        Padding="0,8" HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Thêm món" FontSize="13" Foreground="#4A7BF7" Margin="0,0,5,0"/>
                                        <TextBlock Text="+" FontSize="16" Foreground="#4A7BF7" FontWeight="Bold"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Menu Item 6 -->
                    <Border Background="White" Width="220" Margin="0,0,15,15">
                        <StackPanel>
                            <Border Height="150" Background="#E0E0E0" Margin="15,15,15,10"/>
                            <StackPanel Margin="15,0,15,15">
                                <TextBlock Text="Tên Món ($15.0)" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <DockPanel>
                                    <Button Background="#4A7BF7" BorderThickness="0" 
                                            Padding="25,8" DockPanel.Dock="Left">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Đã chọn" FontSize="13" Foreground="White" Margin="0,0,5,0"/>
                                            <TextBlock Text="✓" FontSize="13" Foreground="White"/>
                                        </StackPanel>
                                    </Button>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Width="30" Height="30" Background="#F5F5F5" BorderThickness="0" Content="−" 
                                                FontSize="18" FontWeight="Bold" Margin="5,0"/>
                                        <TextBlock Text="5" FontSize="16" VerticalAlignment="Center" Margin="10,0"/>
                                        <Button Width="30" Height="30" Background="#F5F5F5" BorderThickness="0" Content="+" 
                                                FontSize="18" FontWeight="Bold" Margin="5,0"/>
                                    </StackPanel>
                                </DockPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </ScrollViewer>
        </Grid>

        <!-- Right Panel - Cart/Order Summary -->
        <Border Grid.Column="2" Background="White" Padding="25" Margin="0,80,20,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Thông tin đơn hàng" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="Mã đơn hàng hiện tại" FontSize="13" Foreground="#4A7BF7"/>
                </StackPanel>

                <!-- Order Items Header -->
                <TextBlock Grid.Row="1" Text="Thông tin món (Số món ăn)" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,15"/>

                <!-- Order Items List -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Order Item 1 -->
                        <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,10">
                            <DockPanel>
                                <Button DockPanel.Dock="Right" Background="Transparent" BorderThickness="0" 
                                        VerticalAlignment="Top" Padding="5">
                                    <TextBlock Text="🗑️" FontSize="18" Foreground="#FF5252"/>
                                </Button>
                                <StackPanel>
                                    <Border Width="80" Height="80" Background="#E0E0E0" CornerRadius="8" Margin="0,0,0,10"/>
                                    <DockPanel>
                                        <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                                            <TextBlock Text="Thịt heo quay" FontSize="13" FontWeight="SemiBold"/>
                                            <TextBlock Text="159.000 VND" FontSize="12" Foreground="#666" Margin="0,2,0,0"/>
                                        </StackPanel>
                                        <StackPanel DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <TextBlock Text="chỉ hiển thị với" FontSize="9" Foreground="#999" TextAlignment="Right"/>
                                            <TextBlock Text="món nhiều size" FontSize="9" Foreground="#999" TextAlignment="Right"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                                                <TextBlock Text="Size" FontSize="11" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                <TextBlock Text="x3" FontSize="13" FontWeight="Bold" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DockPanel>
                                </StackPanel>
                            </DockPanel>
                        </Border>

                        <!-- Order Item 2 -->
                        <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,15">
                            <DockPanel>
                                <Button DockPanel.Dock="Right" Background="Transparent" BorderThickness="0" 
                                        VerticalAlignment="Top" Padding="5">
                                    <TextBlock Text="🗑️" FontSize="18" Foreground="#FF5252"/>
                                </Button>
                                <Border Width="80" Height="80" Background="#E0E0E0"/>
                            </DockPanel>
                        </Border>

                        <!-- Order Item 3 -->
                        <Border Padding="0,15">
                            <DockPanel>
                                <Button DockPanel.Dock="Right" Background="Transparent" BorderThickness="0" 
                                        VerticalAlignment="Top" Padding="5">
                                    <TextBlock Text="🗑️" FontSize="18" Foreground="#FF5252"/>
                                </Button>
                                <Border Width="80" Height="80" Background="#E0E0E0"/>
                            </DockPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Payment Summary -->
                <StackPanel Grid.Row="3" Margin="0,20,0,0">
                    <TextBlock Text="Thông tin thanh toán" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,15"/>

                    <DockPanel Margin="0,0,0,8">
                        <TextBlock Text="Tổng giá trị" FontSize="13" Foreground="#666"/>
                        <TextBlock Text="000 VND" FontSize="13" HorizontalAlignment="Right"/>
                    </DockPanel>

                    <DockPanel Margin="0,0,0,8">
                        <TextBlock Text="Phí" FontSize="13" Foreground="#666"/>
                        <TextBlock Text="000 VND" FontSize="13" HorizontalAlignment="Right"/>
                    </DockPanel>

                    <DockPanel Margin="0,0,0,15">
                        <TextBlock Text="Giảm giá" FontSize="13" Foreground="#666"/>
                        <TextBlock Text="XX%" FontSize="13" HorizontalAlignment="Right"/>
                    </DockPanel>

                    <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="0,15,0,0">
                        <DockPanel>
                            <TextBlock Text="Tổng" FontSize="15" FontWeight="Bold"/>
                            <TextBlock Text="000VND" FontSize="16" FontWeight="Bold" Foreground="#4A7BF7" HorizontalAlignment="Right"/>
                        </DockPanel>
                    </Border>
                </StackPanel>

                <!-- Save Button -->
                <Button Grid.Row="4" Background="#4A7BF7" BorderThickness="0" 
                        Height="50" Margin="0,20,0,0">
                    <TextBlock Text="Lưu đơn hàng" FontSize="15" Foreground="White" FontWeight="SemiBold"/>
                </Button>
            </Grid>
        </Border>

        <!-- User Info (Top Right) -->
        <Border Grid.Column="2" Background="Transparent" Height="60" VerticalAlignment="Top" 
                HorizontalAlignment="Right" Margin="0,20,40,0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
                <TextBlock Text="Tên admin/user" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                <TextBlock Text="Mã NV/ADMIN" FontSize="12" Foreground="#666" HorizontalAlignment="Right" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>