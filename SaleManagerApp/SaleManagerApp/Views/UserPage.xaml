<UserControl x:Class="SaleManagerApp.Views.UserPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#F5F5F5">

    <Grid Margin="20">

        <!-- ROW / COLUMN SETUP -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <!-- Sidebar -->
            <ColumnDefinition Width="897*"/>
            <ColumnDefinition Width="263*"/>
            <!-- Main UI -->
        </Grid.ColumnDefinitions>

        <!-- HEADER -->
        <Grid Height="60" Grid.Row="0" Background="White" Margin="-19,-25,-19,35" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Cột trái: Title -->
                <ColumnDefinition Width="*"/>
                <!-- Cột giữa: Menu -->
                <ColumnDefinition Width="Auto"/>
                <!-- Cột phải: User info -->
            </Grid.ColumnDefinitions>

            <!-- Cột trái: Title -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0,20,0" Grid.Column="0">
                <TextBlock Text="Staff Management" FontWeight="SemiBold" FontSize="22" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Cột giữa: Menu / navigation -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">
                <!-- Tab Quản lý -->
                <Border Background="Transparent" 
                        Padding="16,8" 
                        Margin="4,0"
                        CornerRadius="8"
                        Cursor="Hand">
                    <TextBlock Text="Quản lý" 
                               FontSize="15" 
                               Foreground="#6B7280"/>
                </Border>

                <!-- Tab Phụ bếp (Active) -->
                <Border Background="#EEF2FF" 
                        Padding="16,8" 
                        Margin="4,0"
                        CornerRadius="8"
                        Cursor="Hand">
                    <TextBlock Text="Phụ bếp" 
                               FontSize="15" 
                               Foreground="#5B7FFF" 
                               FontWeight="SemiBold"/>
                </Border>

                <!-- Tab Phục vụ -->
                <Border Background="Transparent" 
                        Padding="16,8" 
                        Margin="4,0"
                        CornerRadius="8"
                        Cursor="Hand">
                    <TextBlock Text="Phục vụ" 
                               FontSize="15" 
                               Foreground="#6B7280"/>
                </Border>
            </StackPanel>

            <!-- Cột phải: User info -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,30,0" Grid.Column="2">
                <TextBlock Text="Tên admin/user" FontWeight="Bold" HorizontalAlignment="Right"/>
                <TextBlock Text="Mã NV/ADMIN" FontSize="12" Foreground="#999" HorizontalAlignment="Right"/>
            </StackPanel>
        </Grid>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Button Row -->
                <RowDefinition Height="*"/>
                <!-- Table -->
            </Grid.RowDefinitions>

            <!-- BUTTON ROW -->
            <DockPanel Grid.Row="0" Margin="0,0,0,10">

                <!-- Search box with placeholder implemented by overlay TextBlock -->
                <Grid Width="220" Height="34" Margin="10" VerticalAlignment="Center">
                    <Image Source="/Assets/Images/Search.png"
                           Width="16"
                           Height="16"
                           Opacity="0.3"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="8,0,0,0"/>

                    <!-- Actual TextBox -->
                    <Border CornerRadius="15" 
                            BorderBrush="#D0D0D0" 
                            BorderThickness="1" 
                            Background="White"
                            VerticalAlignment="Center" Height="34">
                        <TextBox x:Name="SearchBox"
                                 Padding="28,4,6,4"
                                 Background="Transparent"
                                 BorderThickness="0" 
                                 TextChanged="SearchBox_TextChanged"/>
                    </Border>

                    <!-- Placeholder TextBlock (shows only when TextBox.Text is empty) -->
                    <TextBlock Text="Tìm kiếm nhân viên"
                               Margin="28,0,0,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               IsHitTestVisible="False"
                               Visibility="Collapsed">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <!-- If SearchBox.Text == empty string show the placeholder -->
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <!-- Also handle null (initial) -->
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Chấm công -->
                <Button Content="Chấm công"
                        Width="120"
                        Height="36"
                        Margin="10"
                        Background="#407BFF"
                        Foreground="White"
                        Click="ChamCongButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="18"
                                    Background="{TemplateBinding Background}"
                                    Padding="10"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Thêm nhân viên -->
                <Button Content="+ Thêm nhân viên"
                        Width="150"
                        Height="36"
                        Margin="10"
                        Background="#407BFF"
                        Foreground="White"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Right" Click="Button_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="18"
                                    Background="{TemplateBinding Background}"
                                    Padding="10"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </DockPanel>

            <!-- TABLE -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="10">
                <DataGrid AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          FontSize="14"
                          RowHeight="48"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          ItemsSource="{Binding StaffList}" 
                          SelectionChanged="DataGrid_SelectionChanged"
                          GridLinesVisibility="None"
                          BorderThickness="0" Margin="-10,-10,-10,-10">

                    <!-- Style cho Header -->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F9FAFB"/>
                            <Setter Property="Foreground" Value="#111827"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="12,12"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <!-- Style cho Rows -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.RowStyle>

                    <!-- Style cho Cells -->
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="12,0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#111827"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderThickness="0" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tên nhân viên" Binding="{Binding Name}" Width="2*"/>
                        <DataGridTextColumn Header="Mã nhân viên" Binding="{Binding Code}" Width="*" />
                        <DataGridTextColumn Header="Ngày sinh" Binding="{Binding Birthday}" Width="*" />
                        <DataGridTextColumn Header="Ngày vào làm" Binding="{Binding StartDate}" Width="*" />

                        <DataGridTemplateColumn Header="Thông tin liên lạc" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Phone}"/>
                                        <TextBlock Text="{Binding Email}" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Khác" Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Width="32" Height="32" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                        <Image Source="/Assets/Images/menu-dots.png" Width="20"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                </DataGrid>
            </Border>
        </Grid>

    </Grid>

</UserControl>