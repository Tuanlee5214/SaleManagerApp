<UserControl x:Class="SaleManagerApp.Views.StaffManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             Background="#F5F5F5">

    <Grid Margin="20">

        <!-- ROW / COLUMN SETUP -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main UI -->
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Background="White" HorizontalAlignment="Stretch">
            <Image Source="/Assets/Images/logo.jpg" Width="48" Height="48" Margin="10"/>
            <StackPanel Margin="0,20,0,0">
                <Image Source="/Assets/Images/house.png" Width="32" Height="32" Margin="0,15"/>
                <Image Source="/Assets/Images/shopping.png" Width="30" Height="30" Margin="0,15"/>
                <Image Source="/Assets/Images/user.png" Width="28" Height="28" Margin="0,15"/>
                <Image Source="/Assets/Images/icon.png" Width="24" Height="28" Margin="0,15"/>
            </StackPanel>
        </StackPanel>

        <!-- HEADER -->
        <DockPanel Grid.Row="0" Grid.Column="1" Background="White" Margin="10,0,0,10" Height="70" LastChildFill="True">
            <TextBlock Text="Phục vụ" FontSize="22" FontWeight="SemiBold" Margin="20,0,0,0" VerticalAlignment="Center" DockPanel.Dock="Left"/>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="0,0,20,0" VerticalAlignment="Center">
                <TextBlock Text="Tên admin/user" FontWeight="Bold" HorizontalAlignment="Right"/>
                <TextBlock Text="Mã NV/ADMIN" FontSize="12" HorizontalAlignment="Right"/>
            </StackPanel>
        </DockPanel>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Button Row -->
                <RowDefinition Height="*"/>
                <!-- Table -->
            </Grid.RowDefinitions>

            <!-- BUTTON ROW -->
            <DockPanel Grid.Row="0" Margin="0,0,0,10">

                <!-- Search box with placeholder implemented by overlay TextBlock -->
                <Grid Width="220" Height="34" Margin="10" VerticalAlignment="Center">
                    <!-- Actual TextBox -->
                    <TextBox x:Name="SearchBox"
                             VerticalAlignment="Center"
                             Padding="6,4"
                             Background="White"
                             BorderBrush="#D0D0D0"
                             BorderThickness="1"/>

                    <!-- Placeholder TextBlock (shows only when TextBox.Text is empty) -->
                    <TextBlock Text="Tìm kiếm nhân viên"
                               Margin="8,0,0,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               IsHitTestVisible="False"
                               Visibility="Collapsed">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <!-- If SearchBox.Text == empty string show the placeholder -->
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <!-- Also handle null (initial) -->
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Chấm công -->
                <Button Content="Chấm công"
                        Width="120"
                        Height="36"
                        Margin="10"
                        Background="#407BFF"
                        Foreground="White"/>

                <!-- Thêm nhân viên -->
                <Button Content="+ Thêm nhân viên"
                        Width="150"
                        Height="36"
                        Margin="10"
                        Background="#407BFF"
                        Foreground="White"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Right"/>
            </DockPanel>

            <!-- TABLE -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="10">
                <DataGrid AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          FontSize="14"
                          RowHeight="48"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          ItemsSource="{Binding StaffList}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tên nhân viên" Binding="{Binding Name}" Width="2*"/>
                        <DataGridTextColumn Header="Mã nhân viên" Binding="{Binding Code}" Width="*" />
                        <DataGridTextColumn Header="Ngày sinh" Binding="{Binding Birthday}" Width="*" />
                        <DataGridTextColumn Header="Ngày vào làm" Binding="{Binding StartDate}" Width="*" />

                        <DataGridTemplateColumn Header="Thông tin liên lạc" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Phone}"/>
                                        <TextBlock Text="{Binding Email}" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Khác" Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Width="32" Height="32" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                        <Image Source="/Assets/Images/menu-dots.png" Width="20"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>

                </DataGrid>
            </Border>
        </Grid>

    </Grid>

</UserControl>
