<UserControl x:Class="SaleManagerApp.Views.UserPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:SaleManagerApp.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#F5F5F5">

    <UserControl.Resources>
        <helpers:NullableImageConverter x:Key="NullableImageConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="897*"/>
            <ColumnDefinition Width="263*"/>
        </Grid.ColumnDefinitions>

        <!-- HEADER -->
        <Grid Height="60" Grid.Row="0" Background="White" Margin="-19,-25,-19,35" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0,20,0" Grid.Column="0">
                <TextBlock Text="Staff Management" FontWeight="SemiBold" FontSize="22" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">
                <Border Background="Transparent" Padding="16,8" Margin="4,0" CornerRadius="8" Cursor="Hand">
                    <TextBlock Text="Quản lý" FontSize="15" Foreground="#6B7280"/>
                </Border>
                <Border Background="#EEF2FF" Padding="16,8" Margin="4,0" CornerRadius="8" Cursor="Hand">
                    <TextBlock Text="Phụ bếp" FontSize="15" Foreground="#5B7FFF" FontWeight="SemiBold"/>
                </Border>
                <Border Background="Transparent" Padding="16,8" Margin="4,0" CornerRadius="8" Cursor="Hand">
                    <TextBlock Text="Phục vụ" FontSize="15" Foreground="#6B7280"/>
                </Border>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,30,0" Grid.Column="2">
                <TextBlock Text="Tên admin/user" FontWeight="Bold" HorizontalAlignment="Right"/>
                <TextBlock Text="Mã NV/ADMIN" FontSize="12" Foreground="#999" HorizontalAlignment="Right"/>
            </StackPanel>
        </Grid>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- BUTTON ROW -->
            <DockPanel Grid.Row="0" Margin="0,0,0,10">
                <!-- SEARCH BOX -->
                <Grid Width="220" Height="34" Margin="10" VerticalAlignment="Center">
                    <Border CornerRadius="15" BorderBrush="#D0D0D0" BorderThickness="1" 
                            Background="White" VerticalAlignment="Center" Height="34">
                        <TextBox x:Name="SearchBox" Padding="28,0,6,0" VerticalAlignment="Center"
                                 VerticalContentAlignment="Center" Background="Transparent"
                                 BorderThickness="0" TextChanged="SearchBox_TextChanged"/>
                    </Border>

                    <StackPanel Orientation="Horizontal" Margin="8,0,0,0" VerticalAlignment="Center"
                               IsHitTestVisible="False">
                        <TextBlock Text="🔍" FontSize="14" Foreground="Gray" Margin="0,0,5,0"/>
                        <TextBlock Text="Tìm kiếm nhân viên" Foreground="Gray">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Text.Length, ElementName=SearchBox, FallbackValue=0}">
                                            <DataTrigger.Value>
                                                <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">0</sys:Int32>
                                            </DataTrigger.Value>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Grid>

                <!-- CHẤM CÔNG VÀO -->
                <Button Content="Chấm công vào" Width="130" Height="36" Margin="10"
                        Background="#28A745" Foreground="White" Click="CheckInButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="18" Background="{TemplateBinding Background}" Padding="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- CHẤM CÔNG RA -->
                <Button Content="Chấm công ra" Width="130" Height="36" Margin="10"
                        Background="#DC3545" Foreground="White" Click="CheckOutButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="18" Background="{TemplateBinding Background}" Padding="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- THÊM NHÂN VIÊN -->
                <Button Content="+ Thêm nhân viên" Width="150" Height="36" Margin="10"
                        Background="#407BFF" Foreground="White" HorizontalAlignment="Right"
                        DockPanel.Dock="Right" Click="Button_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="18" Background="{TemplateBinding Background}" Padding="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </DockPanel>

            <!-- TABLE -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="10">
                <DataGrid x:Name="StaffDataGrid" 
                          AutoGenerateColumns="False" 
                          HeadersVisibility="Column" 
                          FontSize="14"
                          RowHeight="60" 
                          IsReadOnly="True" 
                          CanUserAddRows="False"
                          ItemsSource="{Binding StaffList}" 
                          SelectionMode="Single"
                          SelectionChanged="DataGrid_SelectionChanged"
                          GridLinesVisibility="None" 
                          BorderThickness="0" 
                          Margin="-10,-10,-10,-10">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F9FAFB"/>
                            <Setter Property="Foreground" Value="#111827"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="12,12"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <!-- ROW STYLE VỚI HOVER VÀ SELECTION -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <!-- HOVER: Màu xám nhẹ -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F3F4F6"/>
                                </Trigger>
                                <!-- SELECTED: Màu xám đậm -->
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E5E7EB"/>
                                </Trigger>
                                <!-- SELECTED + HOVER: Giữ màu xám đậm -->
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsSelected" Value="True"/>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                    </MultiTrigger.Conditions>
                                    <Setter Property="Background" Value="#D1D5DB"/>
                                </MultiTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="12,0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#111827"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderThickness="0" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <!-- Loại bỏ màu xanh khi cell được focus -->
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#111827"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <!-- Tên nhân viên với ảnh -->
                        <DataGridTemplateColumn Header="Tên nhân viên" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border Width="48" Height="48" 
                                                CornerRadius="24" 
                                                Background="#E0E0E0"
                                                Margin="0,0,12,0">
                                            <Grid>
                                                <!-- Background circle luôn hiển thị -->
                                                <Ellipse Fill="#E0E0E0" Width="48" Height="48"/>

                                                <!-- Image với FallbackValue và TargetNullValue -->
                                                <Image Stretch="UniformToFill" 
                                                       Width="48" 
                                                       Height="48"
                                                       Source="{Binding ImagePath, 
                                                               Converter={StaticResource NullableImageConverter},
                                                               FallbackValue={x:Null},
                                                               TargetNullValue={x:Null}}">
                                                    <Image.Clip>
                                                        <EllipseGeometry Center="24,24" RadiusX="24" RadiusY="24"/>
                                                    </Image.Clip>
                                                </Image>
                                            </Grid>
                                        </Border>
                                        <TextBlock Text="{Binding fullName}" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="14"
                                                   FontWeight="Medium"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Ngày sinh" Binding="{Binding dateofBirth}" Width="*" />
                        <DataGridTextColumn Header="Ngày vào làm" Binding="{Binding DateStart}" Width="*" />
                        <DataGridTextColumn Header="Giờ làm tháng" Binding="{Binding TotalHoursOfMonth, StringFormat=N1}" Width="*" />

                        <DataGridTemplateColumn Header="Thông tin liên lạc" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding phone}" FontSize="13"/>
                                        <TextBlock Text="{Binding email}" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Khác" Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Width="32" Height="32" Background="Transparent" 
                                            BorderThickness="0" Cursor="Hand" Click="MenuButton_Click"
                                            Tag="{Binding StaffId}">
                                        <TextBlock Text="⋮" FontSize="20" Foreground="#666" FontWeight="Bold"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                </DataGrid>
            </Border>
        </Grid>

    </Grid>

</UserControl>