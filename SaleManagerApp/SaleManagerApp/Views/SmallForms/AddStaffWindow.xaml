<Window x:Class="SaleManagerApp.Views.AddStaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm nhân viên" 
        Height="700" 
        Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="White" 
            CornerRadius="20" 
            Padding="40">
        <Border.Effect>
            <DropShadowEffect Color="Gray" 
                              Direction="270" 
                              ShadowDepth="3" 
                              BlurRadius="15" 
                              Opacity="0.3"/>
        </Border.Effect>

        <StackPanel Margin="0,0,0,-40">
            <!-- Tiêu đề -->
            <TextBlock Text="THÔNG TIN NHÂN VIÊN" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Họ và tên -->
            <TextBlock Text="Họ và tên:" 
           FontSize="15" 
           Margin="0,0,0,8"/>
            <TextBox x:Name="NameTextBox"
         Height="45"
         FontSize="14"
         Margin="0,0,0,20">
                <TextBox.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="#E8E8E8" 
                                CornerRadius="10" 
                                BorderBrush="#407BFF" 
                                BorderThickness="2">
                                        <ScrollViewer x:Name="PART_ContentHost"
                                          Background="Transparent"
                                          Padding="15,0"
                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <!-- Ngày tháng năm sinh -->
            <TextBlock Text="Ngày tháng năm sinh:" 
                       FontSize="15" 
                       Margin="0,0,0,8"/>
            <Border Background="#E8E8E8" 
                    CornerRadius="10" 
                    Height="45"
                    Margin="0,0,0,20">
                <DatePicker x:Name="BirthdayDatePicker"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="15,0"
                            VerticalContentAlignment="Center"
                            FontSize="14"/>
            </Border>

            <!-- Số điện thoại -->
            <TextBlock Text="Số điện thoại:" 
                       FontSize="15" 
                       Margin="0,0,0,8"/>
            <Border Background="#E8E8E8" 
                    CornerRadius="10" 
                    Height="45"
                    Margin="0,0,0,20">
                <TextBox x:Name="PhoneTextBox"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="15,0"
                         VerticalContentAlignment="Center"
                         FontSize="14"/>
            </Border>

            <!-- Email -->
            <TextBlock Text="Email:" 
                       FontSize="15" 
                       Margin="0,0,0,8"/>
            <Border Background="#E8E8E8" 
                    CornerRadius="10" 
                    Height="45"
                    Margin="0,0,0,20">
                <TextBox x:Name="EmailTextBox"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="15,0"
                         VerticalContentAlignment="Center"
                         FontSize="14"/>
            </Border>

            <!-- Ảnh đại diện -->
            <TextBlock Text="Ảnh đại diện:" 
                       FontSize="15" 
                       Margin="0,0,0,8"/>
            <Button x:Name="UploadImageButton"
                    Width="80"
                    Height="80"
                    Background="#E8E8E8"
                    BorderThickness="0"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,30"
                    Cursor="Hand"
                    Click="UploadImageButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="40">
                            <Grid>
                                <Image x:Name="PreviewImage" 
                                       Visibility="Collapsed"
                                       Stretch="UniformToFill"/>
                                <Path Data="M12 4L12 12M12 12L12 20M12 12L4 12M12 12L20 12" 
                                      Stroke="#666" 
                                      StrokeThickness="2"
                                      Width="30"
                                      Height="30"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Buttons -->
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Button Hủy -->
                <Button Content="Hủy"
                        Grid.Column="0"
                        Height="50"
                        Margin="0,0,10,0"
                        Background="#2D2D2D"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="CancelButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="25"
                                    Padding="10">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Button Xác nhận -->
                <Button Content="Xác nhận"
                        Grid.Column="1"
                        Height="50"
                        Margin="10,0,0,0"
                        Background="#407BFF"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="ConfirmButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="25"
                                    Padding="10">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

        </StackPanel>
    </Border>
</Window>